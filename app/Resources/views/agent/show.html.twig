{% extends 'HVGSystemBundle::base.html.twig' %}
{% use 'HVGSystemBundle::navbar.html.twig' %}
{% use 'HVGSystemBundle::sidebar.html.twig' %}

{% set translation_domain = 'HVGSystemBundle' %}
{% trans_default_domain translation_domain %}

{% block title %}{{ 'agent.show.title'|trans }}{% endblock %}

{% block body %}
    <div id="page-wrapper">
        <div class="row" id="page-header">
            <div class="col-lg-12">
                <h1 class="page-header">{% include 'HVGSystemBundle::icon.html.twig' %}{{ 'agent.show.title'|trans }}</h1>
                {% include 'HVGSystemBundle::flashbag.html.twig' with { 'translation_domain': translation_domain } %}
            </div>
        </div>
        <!-- /#page-header -->

        <div class="row" id="page-show">
            <div class="col-lg-12">
                <div class="panel panel-default">
                    <div class="panel-heading">
                        <div class="btn-toolbar">
                            <a type="button" class="btn btn-default" href="{{ path('agent_index') }}">{{ icon('list') }}&nbsp;{{ 'agent.list.link'|trans }}</a>
                            <button type="button" class="btn btn-warning" data-toggle="modal" data-target="#modalEdit">{{ icon('edit') }}&nbsp;{{ 'agent.edit.link'|trans }}</button>
                            <button type="button" class="btn btn-danger" data-toggle="modal" data-target="#modalDelete">{{ icon('trash-o') }}&nbsp;{{ 'agent.delete.link'|trans }}</button>
                        </div>
                    </div>

                    <div class="panel-body">
                        <dl class="dl-horizontal dl-horizontal-sm dl-horizontal-md dl-horizontal-lg">
                            <dt>{{ 'agent.form.id'|trans }}</dt>
                                <dd>{% if agent.id %}{{ agent.id }}{% endif %}</dd>
                            <dt>{{ 'agent.form.short_name'|trans }}</dt>
                                <dd>{% if agent.shortname %}{{ agent.shortname }}{% endif %}</dd>
                            <dt>{{ 'agent.form.contact_phone'|trans }}</dt>
                                <dd>{% if agent.contactphone %}{{ agent.contactphone }}{% endif %}</dd>
                            <dt>{{ 'agent.form.contact_email'|trans }}</dt>
                                <dd>{% if agent.contactemail %}{{ agent.contactemail }}{% endif %}</dd>
                            <dt>{{ 'agent.form.createdAt'|trans }}</dt>
                                <dd>{% if agent.createdAt %}{{ agent.createdAt|localizeddate('full', 'full', 'es_ES', 'America/Santiago', "d 'de' LLLL 'de' Y - HH:mm") }}{% endif %}</dd>
                            <dt>{{ 'agent.form.updatedAt'|trans }}</dt>
                                <dd>{% if agent.updatedAt %}{{ agent.updatedAt|localizeddate('full', 'full', 'es_ES', 'America/Santiago', "d 'de' LLLL 'de' Y - HH:mm") }}{% endif %}</dd>
                        </dl>
                    </div>
                </div>
            </div>
        </div>
        <!-- /#page-show -->

        <div id="page-modal">
            <div class="modal fade" id="modalEdit" tabindex="-1" role="dialog" aria-labelledby="myModalLabel">
                <div class="modal-dialog modal-md" role="document">
                    <div class="modal-content">
                        <div class="modal-header">
                            <button type="button" class="close" data-dismiss="modal" aria-label="Close">{{ icon('times') }}</button>
                            <h4 class="modal-title" id="myModalLabel">{{ 'agent.new.title'|trans }}</h4>
                        </div>
                        <div class="modal-body">
                            <div class="row">
                                <div class="col-xs-12">
                                    {{ form_start(editForm, { 'style': 'horizontal' }) }}
                                        {{ form_widget(editForm) }}
                                        <button type="submit" class="btn btn-primary btn-block">{{ icon('check fa-fw') }}&nbsp;{{ 'agent.new.confirm'|trans }}</button>
                                    {{ form_end(editForm) }}
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <div class="modal fade" id="modalDelete" tabindex="-1" role="dialog" aria-labelledby="myModalLabel">
                <div class="modal-dialog modal-md" role="document">
                    <div class="modal-content">
                        <div class="modal-header">
                            <button type="button" class="close" data-dismiss="modal" aria-label="Close">{{ icon('times') }}</button>
                            <h4 class="modal-title" id="myModalLabel">{{ 'agent.delete.title'|trans }}</h4>
                        </div>
                        <div class="modal-body">
                            <div class="row">
                                <div class="col-xs-2 text-center">{{ icon('exclamation-triangle fa-5x') }}</div>
                                <div class="col-xs-10"><p>{{ 'agent.delete.message'|trans }}</p></div>
                            </div>
                        </div>
                        <div class="modal-footer">
                            {{ form_start(deleteForm) }}
                                <button type="submit" class="btn btn-danger pull-right">{{ icon('trash-o') }}&nbsp;{{ 'agent.delete.confirm'|trans }}</button>
                            {{ form_end(deleteForm) }}
                        </div>
                    </div>
                </div>
            </div>

        </div>
        <!-- /#page-modal -->

    </div>
    <!-- /#page-wrapper -->
{% endblock %}

