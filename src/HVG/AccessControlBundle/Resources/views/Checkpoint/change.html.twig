{% extends 'HVGAccessControlBundle:Base:layout.html.twig' %}

{% trans_default_domain 'HVGAccessControlBundle' %}

{% block title %}{{ 'checkpoint.index.title'|trans }}{% endblock %}

{% block accesscontrol %}
    <div class="panel panel-primary">
        <div class="panel-heading">
            <h1 class="panel-title">{{ 'checkpoint.change.title'|trans }}</h1>
        </div>
        <div class="panel-body">
            <ul class="nav nav-pills">
                {% for current in checkpoints %}
                    <li {% if current == checkpoint %}class="active"{% endif %}><a href="{{ path('accesscontrol_checkpoint_change', {'hash' : community.hash, 'accessguard' : accessguard.id, 'checkpoint' : current.id }) }}" >{{ current.name }}</a></li>
                {% endfor %}
            </ul>
        </div>
    </div>
    <div>
        <a href="{{ path('accesscontrol_accessmonitor_index', {'hash' : community.hash, 'checkpoint' : checkpoint.id, 'accessguard' : accessguard.id }) }}" class="btn btn-primary btn-lg pull-right">{{ 'checkpoint.change.submit'|trans }}</a>
    </div>
{% endblock %}
