{% extends 'HVGAgentBundle:AccessLog:layout.html.twig' %}

{% set translation_domain = 'HVGAgentBundle' %}{% trans_default_domain translation_domain %}

{% block title %}{{ 'accesslog.show.title'|trans }}{% endblock %}

{% block accesslog %}
    <div class="row" id="page-show">
        <div class="col-md-12">
            <div class="panel panel-default">
                <div class="panel-heading">
                    <h3 class="panel-title">{{ 'accesslog.show.title'|trans }}</h3>
                </div>
                <div class="panel-body">
                    <dl class="dl-horizontal">
                        <dt>{{ 'accesslog.form.id'|trans }}</dt><dd>{% if accesslog.id %}{{ accesslog.id }}{% endif %}</dd>
                        <dt>{{ 'accesslog.form.community'|trans }}</dt><dd>{% if accesslog.community %}{{ accesslog.community }}{% endif %}</dd>
                        <dt>{{ 'accesslog.form.checkpoint'|trans }}</dt><dd>{% if accesslog.checkpoint %}{{ accesslog.checkpoint.name }}{% endif %}</dd>
                        <dt>{{ 'accesslog.form.accessguard'|trans }}</dt><dd>{% if accesslog.accessguard %}{{ accesslog.accessguard.name }}{% endif %}</dd>
                        <dt>{{ 'accesslog.form.description'|trans }}</dt><dd>{% if accesslog.description %}{{ accesslog.description }}{% endif %}</dd>
                        <dt>{{ 'accesslog.form.createdAt'|trans }}</dt><dd>{% if accesslog.createdAt %}{{ accesslog.createdAt|localizeddate('full', 'full', 'es_ES', 'America/Santiago', "dd LLLL y - HH:mm") }}{% endif %}</dd>
                    </dl>
                </div>
            </div>
        </div>
    </div>
    <!-- /#page-show -->
{% endblock %}