{% extends 'HVGSystemBundle::base.html.twig' %}
{% use 'HVGSystemBundle::navbar.html.twig' %}
{% use 'HVGAgentBundle::sidebar.html.twig' %}
{% use 'HVGSystemBundle::icons.html.twig' %}

{% set translation_domain = 'HVGAgentBundle' %}
{% trans_default_domain translation_domain %}

{% block title %}{{ 'community.title.index'|trans }}{% endblock %}

{% block body %}
    <div id="page-wrapper">
        <div class="row" id="page-header">
            <div class="col-lg-12">
                <h1 class="page-header">{% block icons %}{{ parent() }}{% endblock %}{{ 'community.title.index'|trans }}</h1>
                {% include 'HVGSystemBundle::flashbag.html.twig' with { 'translation_domain': translation_domain } %}
            </div>
        </div>
        <!-- /#page-header -->

        <div class="row" id="page-toolbar">
            <div class="col-lg-12">
                <div class="btn-toolbar">
                    <a type="button" class="btn btn-default" href="{{ path('agent_community_index') }}">{{ icon('list fa-fw') }}&nbsp;{{ 'community.list.link'|trans }}</a>
                </div>
            </div>
        </div>
        <!-- /#page-toolbar -->

        <div class="row" id="page-show">
            <div class="col-xs-12 col-lg-6">
                <div class="panel panel-default">
                    <div class="panel-heading">
                        <h1 class="panel-title">{{ 'community.title.properties'|trans }}</h1>
                    </div>
                    <div class="panel-body">
                        <dl class="dl-horizontal dl-horizontal-sm dl-horizontal-md dl-horizontal-lg">
                            <dt>{{ 'community.form.name'|trans }}</dt><dd>{% if community.name %}{{ community.name }}{% endif %}</dd>
                            <dt>{{ 'community.form.person.name'|trans }}</dt><dd>{% if community.person %}{{ community.person }}{% endif %}</dd>
                            <dt>{{ 'community.form.person.rut'|trans }}</dt><dd>{% if community.person %}{{ community.person.rut }}{% endif %}</dd>
                        </dl>
                    </div>
                </div>
                <div class="panel panel-default">
                    <div class="panel-heading">
                        <h1 class="panel-title">{{ 'community.title.communitystaffs'|trans }}</h1>
                    </div>
                    <div class="table-responsive">
                        <table class="records_list table table-striped table-hover">
                            <thead>
                                <tr>
                                    <th>{{ 'communitystaff.form.actions'|trans }}</th>
                                    <th>{{ 'communitystaff.form.person.name'|trans }}</th>
                                    <th>{{ 'communitystaff.form.role.name'|trans }}</th>
                                </tr>
                            </thead>
                            <tbody>
                            {% for key, communityStaff in communityStaffs %}
                                <tr>
                                    <td>
                                        <div class="btn-toolbar">
                                            <div class="btn-group" role="group">
                                                <a type="button" class="btn btn-warning" href="{{ path('agent_communitystaff_show', { 'id': communityStaff.id }) }}" aria-label="{{ 'communityStaff.show.link'|trans }}">{{ icon('search') }}</a>
                                            </div>
                                        </div>
                                    </td>
                                    <td>{% if communityStaff.person %}{{ communityStaff.person.name }}{% endif %}</td>
                                    <td>{% if communityStaff.role %}{{ communityStaff.role.name }}{% endif %}</td>
                                </tr>
                            {% endfor %}
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>

            <div class="col-xs-12 col-lg-6">
                <div class="panel panel-default">
                    <div class="panel-heading">
                        <h1 class="panel-title">{{ 'community.title.unitgroups'|trans }}</h1>
                    </div>
                    <div class="table-responsive">
                        <table class="records_list table table-striped table-hover">
                            <thead>
                                <tr>
                                    <th>{{ 'community.form.actions'|trans }}</th>
                                    <th>{{ 'community.form.name'|trans }}</th>
                                </tr>
                            </thead>
                            <tbody>
                            {% for key, unitgroup in unitgroups %}
                                <tr>
                                    <td>
                                        <div class="btn-toolbar">
                                            <div class="btn-group" role="group">
                                                <a type="button" class="btn btn-warning" href="{{ path('agent_unitgroup_show', { 'id': unitgroup.id }) }}" aria-label="{{ 'unitgroup.show.link'|trans }}">{{ icon('search') }}</a>
                                            </div>
                                        </div>
                                    </td>
                                    <td>{% if unitgroup.name %}{{ unitgroup.name }}{% endif %}</td>
                                </tr>
                            {% endfor %}
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>

        </div>
        <!-- /#page-list -->

    </div>
    <!-- /#page-wrapper -->
{% endblock %}
