{% extends 'HVGAgentBundle:CommunityEvent:layout.html.twig' %}

{% set translation_domain = 'HVGAgentBundle' %}{% trans_default_domain translation_domain %}

{% block title %}{{ 'communityevent.index.title'|trans }}{% endblock %}

{% block communityevent %}
    <div class="row" id="page-list">
        <div class="col-lg-12">
            <div class="panel panel-default">
                <div class="panel-heading">
                    <h1 class="panel-title">{{ 'communityevent.index.list'|trans }}</h1>
                </div>
                {% if communityevents is empty %}
                <div class="panel-body">
                    <div class="text-center">{{ 'communityevent.index.empty'|trans }}</div>
                </div>
                {% else %}
                <div class="table-responsive">
                    <table class="records_list table table-striped table-hover">
                        <thead>
                            <tr>
                                <th>
                                    <div class="btn-group"><a href="#" class="btn btn-xs btn-default disabled">{{ icon('search fa-fw') }}</a></div>
                                    <div class="btn-group"><a href="#" class="btn btn-xs btn-default disabled">{{ icon('edit fa-fw') }}</a></div>
                                    <div class="btn-group"><a href="#" class="btn btn-xs btn-default disabled">{{ icon('times fa-fw') }}</a></div>
                                </th>
                                <th>{{ 'communityevent.form.name'|trans }}</th>
                                <th>{{ 'communityevent.form.community'|trans }}</th>
                            </tr>
                        </thead>
                        <tbody>
                        {% for communityevent in communityevents %}
                            <tr>
                                <td>
                                    <div class="btn-group"><a href="{{ path('agent_communityevent_show', {communityevent : communityevent.id}) }}" class="btn btn-xs btn-primary">{{ icon('search fa-fw') }}</a></div>
                                    <div class="btn-group"><a href="{{ path('agent_communityevent_edit', {communityevent : communityevent.id}) }}" class="btn btn-xs btn-warning">{{ icon('edit fa-fw') }}</a></div>
                                    <div class="btn-group"><a href="{{ path('agent_communityevent_delete', {communityevent : communityevent.id}) }}" class="btn btn-xs btn-danger">{{ icon('times fa-fw') }}</a></div>
                                </td>
                                <td>{% if communityevent.name %}{{ communityevent.name }}{% endif %}</td>
                                <td>{% if communityevent.community %}{{ communityevent.community }}{% endif %}</td>
                            </tr>
                        {% endfor %}
                        </tbody>
                    </table>
                </div>
                {% endif %}
            </div>                
        </div>
    </div>
    <!-- /#page-list -->        
{% endblock %}