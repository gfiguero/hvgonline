{% extends 'HVGAgentBundle:CommunityEvent:layout.html.twig' %}

{% set translation_domain = 'HVGAgentBundle' %}{% trans_default_domain translation_domain %}

{% block title %}{{ 'communityevent.show.title'|trans }}{% endblock %}

{% block communityevent %}
    <div class="row" id="page-show">
        <div class="col-md-6">
            <div class="panel panel-default">
                <div class="panel-heading">
                    <h3 class="panel-title">{{ 'communityevent.show.title'|trans }}</h3>
                </div>
                <div class="panel-body">
                    <dl class="dl-horizontal">
                        <dt>{{ 'communityevent.form.name'|trans }}</dt><dd>{% if communityevent.name %}{{ communityevent.name }}{% endif %}</dd>
                        <dt>{{ 'communityevent.form.community'|trans }}</dt><dd>{% if communityevent.community %}{{ communityevent.community }}{% endif %}</dd>
                    </dl>
                </div>
            </div>
        </div>
        <div class="col-md-6">
            <div class="btn-toolbar">
                <div class="btn-group"><a href="{{ path('agent_communityevent_edit', {'communityevent' : communityevent.id}) }}" class="btn btn-warning">{{ icon('edit fa-fw') }}&nbsp;{{ 'communityevent.edit.link'|trans }}</a></div>
                <div class="btn-group"><a href="{{ path('agent_communityevent_delete', {'communityevent' : communityevent.id}) }}" class="btn btn-danger">{{ icon('times fa-fw') }}&nbsp;{{ 'communityevent.delete.link'|trans }}</a></div>
            </div>
        </div>
    </div>
    <!-- /#page-list -->
{% endblock %}