{% extends 'HVGSystemBundle::base.html.twig' %}
{% use 'HVGSystemBundle::navbar.html.twig' %}
{% use 'HVGAgentBundle::sidebar.html.twig' %}
{% use 'HVGSystemBundle::icons.html.twig' %}

{% set translation_domain = 'HVGAgentBundle' %}
{% trans_default_domain translation_domain %}

{% block title %}{{ 'communitystaff.index.title'|trans }}{% endblock %}

{% block body %}
    <div id="page-wrapper">
        <div class="row" id="page-header">
            <div class="col-lg-12">
                <h1 class="page-header">{% block icons %}{{ parent() }}{% endblock %}{{ 'communitystaff.index.title'|trans }}</h1>
                {% include 'HVGSystemBundle::flashbag.html.twig' with { 'translation_domain': translation_domain } %}
            </div>
        </div>
        <!-- /#page-header -->

        <div class="row" id="page-toolbar">
            <div class="col-lg-12">
                <div class="btn-toolbar">
                    <a type="button" class="btn btn-default" href="{{ path('agent_communitystaff_index') }}">{{ icon('list fa-fw') }}&nbsp;{{ 'communitystaff.index.link'|trans }}</a>
                </div>
            </div>
        </div>
        <!-- /#page-toolbar -->

        <div class="row" id="page-show">
            <div class="col-xs-12">
                <div class="panel panel-default">
                    <div class="panel-heading">
                        <h1 class="panel-title">{{ 'communitystaff.show.title'|trans }}</h1>
                    </div>
                    <div class="panel-body">
                        <dl class="dl-horizontal dl-horizontal-sm dl-horizontal-md dl-horizontal-lg">
                            <dt>{{ 'communitystaff.form.person.name'|trans }}</dt><dd>{% if communityStaff.person %}{{ communityStaff.person }}{% endif %}</dd>
                            <dt>{{ 'communitystaff.form.role'|trans }}</dt><dd>{% if communityStaff.role %}{{ communityStaff.role }}{% endif %}</dd>
                            <dt>{{ 'communitystaff.form.community'|trans }}</dt><dd>{% if communityStaff.community %}<a href="{{ path('agent_community_show', { id : communityStaff.community.id }) }}">{{ communityStaff.community }}</a>{% endif %}</dd>
                            <dt>{{ 'communitystaff.form.createdAt'|trans }}</dt><dd>{% if communityStaff.createdAt %}{{ communityStaff.createdAt|localizeddate('full', 'full', 'es_ES', 'America/Santiago', "d 'de' LLLL 'de' Y - HH:mm") }}{% endif %}</dd>
                            <dt>{{ 'communitystaff.form.updatedAt'|trans }}</dt><dd>{% if communityStaff.updatedAt %}{{ communityStaff.updatedAt|localizeddate('full', 'full', 'es_ES', 'America/Santiago', "d 'de' LLLL 'de' Y - HH:mm") }}{% endif %}</dd>
                        </dl>
                    </div>
                </div>
            </div>

        </div>
        <!-- /#page-list -->

    </div>
    <!-- /#page-wrapper -->
{% endblock %}

{% block stylesheet %}
<style type="text/css">
#page-show1 {
    display: flex;
    flex-direction: column;
    flex-wrap: wrap;
}
</style>
{% endblock %}