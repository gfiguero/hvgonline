{% block units %}
    <div class="row" id="unit-nav">
        <div class="col-md-12">
        {% if units is not empty %}
            <p>
                <ul class="nav nav-pills">
                    {% for current in units %}
                        <li {% if current == unit %}class="active"{% endif %}><a href="{{ path('agent_datacenter_unit', {'id' : current.id }) }}">{{ current.name }}</a></li>
                    {% endfor %}
                </ul>
            </p>
        {% endif %}
        </div>
    </div>
    <!-- /#units -->
{% endblock %}