{% extends 'HVGAgentBundle:Guest:layout.html.twig' %}

{% set translation_domain = 'HVGAgentBundle' %}{% trans_default_domain translation_domain %}

{% block title %}{{ 'guest.delete.title'|trans }}{% endblock %}

{% block guest %}
    <div class="row" id="page-delete">
        <div class="col-md-6">
            <div class="panel panel-danger">
                <div class="panel-heading">
                    <h3 class="panel-title">{{ 'guest.delete.title'|trans }}</h3>
                </div>
                <div class="panel-body">
                    <dl class="dl-horizontal">
                        <dt>{{ 'guest.form.name'|trans }}</dt><dd>{% if guest.name %}{{ guest.name }}{% endif %}</dd>
                        <dt>{{ 'guest.form.unit'|trans }}</dt><dd>{% if guest.unit %}{{ guest.unit }}{% endif %}</dd>
                    </dl>
                </div>
            </div>
        </div>
        {{ form_start(deleteForm) }}
        {{ form_widget(deleteForm) }}
        <div class="col-md-6">
            <div class="btn-toolbar">
                <div class="btn-group"><button type="submit" class="btn btn-danger">{{ icon('times fa-fw') }}&nbsp;{{ 'guest.delete.submit'|trans }}</button></div>
                <div class="btn-group"><a type="button" class="btn btn-default" href="{{ path('agent_guest_show', {'guest' : guest.id}) }}">{{ icon('times fa-fw') }}&nbsp;{{ 'guest.delete.cancel'|trans }}</a></div>
            </div>
        </div>
        {{ form_end(deleteForm) }}
    </div>
    <!-- /#page-list -->
{% endblock %}