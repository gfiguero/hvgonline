{% extends 'HVGAgentBundle:Guest:layout.html.twig' %}

{% set translation_domain = 'HVGAgentBundle' %}{% trans_default_domain translation_domain %}

{% block title %}{{ 'guest.show.title'|trans }}{% endblock %}

{% block guest %}
    <div class="row" id="page-show">
        <div class="col-md-6">
            <div class="panel panel-default">
                <div class="panel-heading">
                    <h3 class="panel-title">{{ 'guest.show.title'|trans }}</h3>
                </div>
                <div class="panel-body">
                    <dl class="dl-horizontal">
                        <dt>{{ 'guest.form.createdAt'|trans }}</dt><dd>{% if guest.createdAt %}{{ guest.createdAt|localizeddate('full', 'full', 'es_ES', 'America/Santiago', "dd LLLL y - HH:mm") }}{% endif %}</dd>
                        <dt>{{ 'guest.form.unit'|trans }}</dt><dd>{% if guest.unit %}{{ guest.unit }}{% endif %}</dd>
                        <dt>{{ 'guest.form.carlicence'|trans }}</dt><dd>{% if guest.carLicence %}{{ guest.carLicence }}{% endif %}</dd>
                        <dt>{{ 'guest.form.guestcarpark'|trans }}</dt><dd>{% if guest.guestcarpark %}{{ guest.guestcarpark.name }}{% endif %}</dd>
                        <dt>{{ 'guest.form.checkpoint'|trans }}</dt><dd>{% if guest.checkpoint %}{{ guest.checkpoint.name }}{% endif %}</dd>
                        <dt>{{ 'guest.form.accessguard'|trans }}</dt><dd>{% if guest.accessguard %}{{ guest.accessguard.name }}{% endif %}</dd>
                    </dl>
                </div>
            </div>
        </div>
{#}
        <div class="col-md-6">
            <div class="btn-toolbar">
                <div class="btn-group"><a href="{{ path('agent_guest_edit', {'guest' : guest.id}) }}" class="btn btn-warning">{{ icon('edit fa-fw') }}&nbsp;{{ 'guest.edit.link'|trans }}</a></div>
                <div class="btn-group"><a href="{{ path('agent_guest_delete', {'guest' : guest.id}) }}" class="btn btn-danger">{{ icon('times fa-fw') }}&nbsp;{{ 'guest.delete.link'|trans }}</a></div>
            </div>
        </div>
{#}
        <div class="col-md-6">
            <div class="panel panel-default">
                <div class="panel-heading">
                    <h3 class="panel-title">{{ 'guest.show.people'|trans }}</h3>
                </div>
                <div class="table-responsive">
                    <table class="records_list table table-striped table-hover table-middle">
                        <thead>
                            <tr>
                                <th>{{ 'person.form.name'|trans }}</th>
                                <th>{{ 'person.form.rut'|trans }}</th>
                            </tr>
                        </thead>
                        <tbody>
                        {% for person in guest.people %}
                            <tr>
                                <td>{% if person.name %}{{ person.name }}{% endif %}</td>
                                <td>{% if person.rut %}{{ person.rut }}{% endif %}</td>
                            </tr>
                        {% endfor %}
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
    <!-- /#page-list -->
{% endblock %}