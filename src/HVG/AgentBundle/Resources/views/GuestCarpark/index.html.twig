{% extends 'HVGAgentBundle:GuestCarpark:layout.html.twig' %}

{% set translation_domain = 'HVGAgentBundle' %}{% trans_default_domain translation_domain %}

{% block title %}{{ 'guestcarpark.index.title'|trans }}{% endblock %}

{% block guestcarpark %}
    <div class="row" id="page-list">
        <div class="col-lg-12">
            <div class="panel panel-default">
                <div class="panel-heading">
                    <h1 class="panel-title">{{ 'guestcarpark.index.list'|trans }}</h1>
                </div>
                {% if guestcarparks is empty %}
                <div class="panel-body">
                    <div class="text-center">{{ 'guestcarpark.index.empty'|trans }}</div>
                </div>
                {% else %}
                <div class="table-responsive">
                    <table class="records_list table table-striped table-hover">
                        <thead>
                            <tr>
                                <th>
                                    <div class="btn-group"><a href="#" class="btn btn-xs btn-default disabled">{{ icon('search fa-fw') }}</a></div>
                                    <div class="btn-group"><a href="#" class="btn btn-xs btn-default disabled">{{ icon('edit fa-fw') }}</a></div>
                                    <div class="btn-group"><a href="#" class="btn btn-xs btn-default disabled">{{ icon('times fa-fw') }}</a></div>
                                </th>
                                <th>{{ 'guestcarpark.form.name'|trans }}</th>
                                <th>{{ 'guestcarpark.form.community'|trans }}</th>
                            </tr>
                        </thead>
                        <tbody>
                        {% for guestcarpark in guestcarparks %}
                            <tr>
                                <td>
                                    <div class="btn-group"><a href="{{ path('agent_guestcarpark_show', {guestcarpark : guestcarpark.id}) }}" class="btn btn-xs btn-primary">{{ icon('search fa-fw') }}</a></div>
                                    <div class="btn-group"><a href="{{ path('agent_guestcarpark_edit', {guestcarpark : guestcarpark.id}) }}" class="btn btn-xs btn-warning">{{ icon('edit fa-fw') }}</a></div>
                                    <div class="btn-group"><a href="{{ path('agent_guestcarpark_delete', {guestcarpark : guestcarpark.id}) }}" class="btn btn-xs btn-danger">{{ icon('times fa-fw') }}</a></div>
                                </td>
                                <td>{% if guestcarpark.name %}{{ guestcarpark.name }}{% endif %}</td>
                                <td>{% if guestcarpark.community %}{{ guestcarpark.community }}{% endif %}</td>
                            </tr>
                        {% endfor %}
                        </tbody>
                    </table>
                </div>
                {% endif %}
            </div>                
        </div>
    </div>
    <!-- /#page-list -->        
{% endblock %}