{% extends 'HVGAgentBundle:GuestCarpark:layout.html.twig' %}

{% set translation_domain = 'HVGAgentBundle' %}{% trans_default_domain translation_domain %}

{% block title %}{{ 'guestcarpark.show.title'|trans }}{% endblock %}

{% block guestcarpark %}
    <div class="row" id="page-show">
        <div class="col-md-6">
            <div class="panel panel-default">
                <div class="panel-heading">
                    <h3 class="panel-title">{{ 'guestcarpark.show.title'|trans }}</h3>
                </div>
                <div class="panel-body">
                    <dl class="dl-horizontal">
                        <dt>{{ 'guestcarpark.form.name'|trans }}</dt><dd>{% if guestcarpark.name %}{{ guestcarpark.name }}{% endif %}</dd>
                        <dt>{{ 'guestcarpark.form.community'|trans }}</dt><dd>{% if guestcarpark.community %}{{ guestcarpark.community }}{% endif %}</dd>
                    </dl>
                </div>
            </div>
        </div>
        <div class="col-md-6">
            <div class="btn-toolbar">
                <div class="btn-group"><a href="{{ path('agent_guestcarpark_edit', {'guestcarpark' : guestcarpark.id}) }}" class="btn btn-warning">{{ icon('edit fa-fw') }}&nbsp;{{ 'guestcarpark.edit.link'|trans }}</a></div>
                <div class="btn-group"><a href="{{ path('agent_guestcarpark_delete', {'guestcarpark' : guestcarpark.id}) }}" class="btn btn-danger">{{ icon('times fa-fw') }}&nbsp;{{ 'guestcarpark.delete.link'|trans }}</a></div>
            </div>
        </div>
    </div>
    <!-- /#page-list -->
{% endblock %}