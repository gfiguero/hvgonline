{% extends 'HVGSystemBundle::base.html.twig' %}
{% use 'HVGSystemBundle::navbar.html.twig' %}
{% use 'HVGAgentBundle::sidebar.html.twig' %}
{% use 'HVGSystemBundle::icons.html.twig' %}
{% use 'HVGAgentBundle:Ticket:list.html.twig' %}

{% set translation_domain = 'HVGAgentBundle' %}
{% trans_default_domain translation_domain %}

{% block title %}{{ 'petition.my.title'|trans }}{% endblock %}

{% block body %}
    <div id="page-wrapper">
        <div class="row" id="page-header">
            <div class="col-lg-12">
                <h1 class="page-header">{% block icons %}{{ parent() }}{% endblock %}{{ 'petition.my.title'|trans }}</h1>
                {% include 'HVGSystemBundle::flashbag.html.twig' with { 'translation_domain': translation_domain } %}
            </div>
        </div>
        <!-- /#page-header -->

        <div class="row" id="page-list">
            <div class="col-lg-12">
                <div class="panel panel-default">
                    <div class="panel-heading">
                        <h1 class="panel-title">{{ 'petition.my.list'|trans }}</h1>
                    </div>
                    <div class="table-responsive">
                        <table class="records_list table table-striped table-hover">
                            <thead>
                                <tr>
                                    <th>{{ 'petition.form.actions'|trans }}</th>
                                    <th>{{ 'petition.form.id'|trans }}</th>
                                    <th>{{ 'petition.form.petitionstatus'|trans }}</th>
                                    <th>{{ 'petition.form.user'|trans }}</th>
                                    <th>{{ 'petition.form.liability'|trans }}</th>
                                    <th>{{ 'petition.form.area'|trans }}</th>
                                    <th>{{ 'petition.form.community'|trans }}</th>
                                    <th>{{ 'petition.form.createdAt'|trans }}</th>
                                    <th class="col-md-5">{{ 'petition.form.description'|trans }}</th>
                                </tr>
                            </thead>
                            <tbody>
                            {% for key, petition in petitions %}
                                <tr>
                                    <td>
                                        <div class="btn-toolbar">
                                            <div class="btn-group" role="group">
                                                <a type="button" class="btn btn-xs btn-warning" href="{{ path('agent_petition_show', { 'id': petition.id }) }}" aria-label="{{ 'petition.show.link'|trans }}">{{ icon('search') }}</a>
                                            </div>
                                        </div>
                                    </td>
                                    <td>{% if petition.id %}{{ petition.id }}{% endif %}</td>
                                    <td>{% if petition.petitionstatus %}{{ petition.petitionstatus }}{% endif %}</td>
                                    <td>{% if petition.user %}{{ petition.user.username }}{% endif %}</td>
                                    <td>{% if petition.liability %}{{ petition.liability.username }}{% endif %}</td>
                                    <td>{% if petition.area %}{{ petition.area.name }}{% endif %}</td>
                                    <td>{% if petition.community %}{{ petition.community.name }}{% endif %}</td>
                                    <td>{% if petition.createdAt %}{{ petition.createdAt|ago }}{% endif %}</td>
                                    <td>{% if petition.description %}{{ petition.description }}{% endif %}</td>
                                </tr>
                            {% endfor %}
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
        <!-- /#page-list -->

    </div>
    <!-- /#page-wrapper -->

{% endblock %}
