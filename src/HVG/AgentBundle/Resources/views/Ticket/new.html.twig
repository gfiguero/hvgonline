{% extends 'HVGSystemBundle::base.html.twig' %}
{% use 'HVGSystemBundle::navbar.html.twig' %}
{% use 'HVGAgentBundle::sidebar.html.twig' %}
{% use 'HVGSystemBundle::icons.html.twig' %}

{% set translation_domain = 'HVGAgentBundle' %}
{% trans_default_domain translation_domain %}

{% block title %}{{ 'ticket.title.index'|trans }}{% endblock %}

{% block body %}
    <div id="page-wrapper">
        <div class="row" id="page-header">
            <div class="col-lg-12">
                <h1 class="page-header">{% block icons %}{{ parent() }}{% endblock %}{{ 'ticket.title.index'|trans }}</h1>
                {% include 'HVGSystemBundle::flashbag.html.twig' with { 'translation_domain': translation_domain } %}
            </div>
        </div>
        <!-- /#page-header -->

        <div class="row" id="page-toolbar">
            <div class="col-lg-12">
                <div class="btn-toolbar">
                    <a type="button" class="btn btn-default" href="{{ path('agent_ticket_index') }}">{{ icon('list fa-fw') }}&nbsp;{{ 'ticket.list.link'|trans }}</a>
                </div>
            </div>
        </div>
        <!-- /#page-toolbar -->

        <div class="row" id="page-new">
            <div class="col-xs-12 col-md-6">
                <div class="panel panel-default">
                    <div class="panel-heading">
                        <h1 class="panel-title">{{ 'ticket.title.unit'|trans }}</h1>
                    </div>
                    <div class="panel-body">
                        {% include 'HVGAgentBundle:Ticket:filter.html.twig' %}
                    </div>
                </div>
            </div>
        </div>
        <!-- /#page-new -->

        <div id="page-modal">
            <div class="modal fade" id="modalNew" tabindex="-1" role="dialog" aria-labelledby="myModalLabel">
                <div class="modal-dialog modal-lg" role="document">
                    <div class="modal-content">
                        <div class="modal-header">
                            <button type="button" class="close" data-dismiss="modal" aria-label="Close">{{ icon('times') }}</button>
                            <h4 class="modal-title" id="myModalLabel">{{ 'ticket.new.title'|trans }}</h4>
                        </div>
                        <div class="modal-body">
                            <div class="row">
                                <div class="col-xs-12">
{#}
                                    {{ form_start(newTicketActionForm, { 'style': 'horizontal' }) }}
                                        {{ form_widget(newTicketActionForm) }}
                                        <div class="form-group"><div class="col-lg-offset-4 col-lg-8">
                                            <button type="submit" class="btn btn-primary">{{ icon('check fa-fw') }}&nbsp;{{ 'ticketaction.new.submit'|trans }}</button>
                                        </div></div>
                                    {{ form_end(newTicketActionForm) }}
{#}
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <!-- /#page-modal -->

    </div>
    <!-- /#page-wrapper -->
{% endblock %}

{% block javascript %}
<script type="text/javascript">
    var optionsCommunity = {
        enableFiltering: true,
        enableCaseInsensitiveFiltering: true,
        disableIfEmpty: true,
        maxHeight: 200,
        buttonWidth: '100%',
        nonSelectedText: 'Ninguna Comunidad Seleccionada',
        filterPlaceholder: 'Buscar',
        onChange: function() {
            var $form = $('#ticket_filter_form');
            $.ajax({
                url: $form.attr('action'),
                type: $form.attr('method'),
                data: $form.serializeArray(),
                success: function(html) {
                    $('#ticket_filter_unitgroup').multiselect('destroy');
                    $('#ticket_filter_unitgroup').replaceWith($(html).find('#ticket_filter_unitgroup'));
                    $('#ticket_filter_unitgroup').multiselect(optionsUnitgroup);
                    $('#ticket_filter_unit').multiselect('destroy');
                    $('#ticket_filter_unit').replaceWith($(html).find('#ticket_filter_unit'));
                    $('#ticket_filter_unit').multiselect(optionsUnit);
                }
            });
        }
    };
    var optionsUnitgroup = {
        enableFiltering: true,
        enableCaseInsensitiveFiltering: true,
        disableIfEmpty: true,
        maxHeight: 200,
        buttonWidth: '100%',
        nonSelectedText: 'Ningún Grupo Seleccionado',
        filterPlaceholder: 'Buscar',
        onChange: function() {
            console.log('change group');
            var $form = $('#ticket_filter_form');
            $.ajax({
                url: $form.attr('action'),
                type: $form.attr('method'),
                data: $form.serializeArray(),
                success: function(html) {
                    $('#ticket_filter_unit').multiselect('destroy');
                    $('#ticket_filter_unit').replaceWith($(html).find('#ticket_filter_unit'));
                    $('#ticket_filter_unit').multiselect(optionsUnit);
                }
            });
        }
    };
    var optionsUnit = {
        enableFiltering: true,
        enableCaseInsensitiveFiltering: true,
        disableIfEmpty: true,
        maxHeight: 200,
        buttonWidth: '100%',
        nonSelectedText: 'Ningún Departamento Seleccionado',
        filterPlaceholder: 'Buscar'
    };
    $('#ticket_filter_community').multiselect(optionsCommunity);
    $('#ticket_filter_unitgroup').multiselect(optionsUnitgroup);
    $('#ticket_filter_unit').multiselect(optionsUnit);
</script>
{% endblock %}
