{% extends 'HVGSystemBundle::base.html.twig' %}
{% use 'HVGSystemBundle::navbar.html.twig' %}
{% use 'HVGAgentBundle::sidebar.html.twig' %}
{% use 'HVGSystemBundle::icons.html.twig' %}

{% set translation_domain = 'HVGAgentBundle' %}
{% trans_default_domain translation_domain %}

{% block title %}{{ 'ticket.title.index'|trans }}{% endblock %}

{% block body %}
    <div id="page-wrapper">
        <div class="row" id="page-header">
            <div class="col-lg-12">
                <h1 class="page-header">{% block icons %}{{ parent() }}{% endblock %}{{ 'ticket.title.index'|trans }}</h1>
                {% include 'HVGSystemBundle::flashbag.html.twig' with { 'translation_domain': translation_domain } %}
            </div>
        </div>
        <!-- /#page-header -->

        <div class="row" id="page-toolbar">
            <div class="col-lg-12">
                <div class="btn-toolbar">
                    <a type="button" class="btn btn-default" href="{{ path('agent_unit_show', { 'id':ticket.unit.id }) }}">{{ icon('home fa-fw') }}&nbsp;{{ 'unit.show.link'|trans }}</a>
                </div>
            </div>
        </div>
        <!-- /#page-toolbar -->

        <div class="row" id="page-show">
            <div class="col-xs-12 col-lg-6">
                <div class="panel panel-default">
                    <div class="panel-heading">
                        <h1 class="panel-title">{{ 'ticket.title.properties'|trans }}</h1>
                    </div>
                    <div class="panel-body">
                        <dl class="dl-horizontal dl-horizontal-sm dl-horizontal-md dl-horizontal-lg">
                            <dt>{{ 'ticket.form.community'|trans }}</dt><dd>{% if ticket.community %}<a href="{{ path('agent_community_show', { 'id' : ticket.community.id }) }}">{{ ticket.community.name }}</a>{% endif %}</dd>
                            <dt>{{ 'ticket.form.unitgroup'|trans }}</dt><dd>{% if ticket.unitgroup %}<a href="{{ path('agent_unitgroup_show', { 'id' : ticket.unitgroup.id }) }}">{{ ticket.unitgroup.name }}</a>{% endif %}</dd>
                            <dt>{{ 'ticket.form.unit'|trans }}</dt><dd>{% if ticket.unit %}<a href="{{ path('agent_unit_show', { 'id' : ticket.unit.id }) }}">{{ ticket.unit.name }}</a>{% endif %}</dd>
                            <dt>{{ 'ticket.form.contactname'|trans }}</dt><dd>{% if ticket.contactname %}{{ ticket.contactname }}{% endif %}</dd>
                            <dt>{{ 'ticket.form.contactphone'|trans }}</dt><dd>{% if ticket.contactphone %}{{ ticket.contactphone }}{% endif %}</dd>
                            <dt>{{ 'ticket.form.contactemail'|trans }}</dt><dd>{% if ticket.contactemail %}{{ ticket.contactemail }}{% endif %}</dd>
                            <dt>{{ 'ticket.form.description'|trans }}</dt><dd>{% if ticket.description %}{{ ticket.description }}{% endif %}</dd>
                        </dl>
                    </div>
                </div>

            </div>

            <div class="col-xs-12 col-lg-6">
                <div class="panel panel-default">
                    <div class="panel-heading">
                        <h1 class="panel-title">{{ 'ticket.title.actions'|trans }}</h1>
                    </div>
                    <div class="table-responsive">
                        <table class="records_list table table-striped table-hover">
                            <thead>
                                <tr>
                                    <th>{{ 'ticketaction.form.actions'|trans }}</th>
                                    <th>{{ 'ticketaction.form.id'|trans }}</th>
                                    <th>{{ 'ticketaction.form.user'|trans }}</th>
                                </tr>
                            </thead>
                            <tbody>
                            {% for key, ticketaction in ticketactions %}
                                <tr>
                                    <td>
                                        <div class="btn-toolbar">
                                            <div class="btn-group" role="group">
                                                <a type="button" class="btn btn-warning" href="{{ path('agent_ticketaction_show', { 'id': ticketaction.id }) }}" aria-label="{{ 'ticketaction.show.link'|trans }}">{{ icon('search') }}</a>
                                            </div>
                                        </div>
                                    </td>
                                    <td>{% if ticketaction.id %}{{ ticketaction.id }}{% endif %}</td>
                                    <td>{% if ticketaction.user %}{{ ticketaction.user.username }}{% endif %}</td>
                                </tr>
                            {% endfor %}
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
        <!-- /#page-list -->

    </div>
    <!-- /#page-wrapper -->
{% endblock %}