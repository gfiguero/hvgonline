{% extends 'HVGSystemBundle::base.html.twig' %}
{% use 'HVGSystemBundle::navbar.html.twig' %}
{% use 'HVGAgentBundle::sidebar.html.twig' %}
{% use 'HVGSystemBundle::icons.html.twig' %}

{% set translation_domain = 'HVGAgentBundle' %}
{% trans_default_domain translation_domain %}

{% block title %}{{ 'ticketaction.title.index'|trans }}{% endblock %}

{% block body %}
    <div id="page-wrapper">
        <div class="row" id="page-header">
            <div class="col-lg-12">
                <h1 class="page-header">{% block icons %}{{ parent() }}{% endblock %}{{ 'ticketaction.title.index'|trans }}</h1>
                {% include 'HVGSystemBundle::flashbag.html.twig' with { 'translation_domain': translation_domain } %}
            </div>
        </div>
        <!-- /#page-header -->

        <div class="row" id="page-toolbar">
            <div class="col-lg-12">
                <div class="btn-toolbar">
                    <a type="button" class="btn btn-default" href="{{ path('agent_unit_show', { 'id':ticketaction.unit.id }) }}">{{ icon('home fa-fw') }}&nbsp;{{ 'unit.show.link'|trans }}</a>
                </div>
            </div>
        </div>
        <!-- /#page-toolbar -->

        <div class="row" id="page-show">
            <div class="col-xs-12 col-lg-6">
                <div class="panel panel-default">
                    <div class="panel-heading">
                        <h1 class="panel-title">{{ 'ticketaction.title.properties'|trans }}</h1>
                    </div>
                    <div class="panel-body">
                        <dl class="dl-horizontal dl-horizontal-sm dl-horizontal-md dl-horizontal-lg">
                            <dt>{{ 'ticketaction.form.community'|trans }}</dt><dd>{% if ticketaction.community %}<a href="{{ path('agent_community_show', { 'id' : ticketaction.community.id }) }}">{{ ticketaction.community.name }}</a>{% endif %}</dd>
                            <dt>{{ 'ticketaction.form.unitgroup'|trans }}</dt><dd>{% if ticketaction.unitgroup %}<a href="{{ path('agent_unitgroup_show', { 'id' : ticketaction.unitgroup.id }) }}">{{ ticketaction.unitgroup.name }}</a>{% endif %}</dd>
                            <dt>{{ 'ticketaction.form.unit'|trans }}</dt><dd>{% if ticketaction.unit %}<a href="{{ path('agent_unit_show', { 'id' : ticketaction.unit.id }) }}">{{ ticketaction.unit.name }}</a>{% endif %}</dd>
                            <dt>{{ 'ticketaction.form.ticket'|trans }}</dt><dd>{% if ticketaction.ticket %}<a href="{{ path('agent_ticket_show', { 'id' : ticketaction.ticket.id }) }}">{{ ticketaction.ticket.name }}</a>{% endif %}</dd>
                            <dt>{{ 'ticketaction.form.id'|trans }}</dt><dd>{% if ticketaction.id %}{{ ticketaction.id }}{% endif %}</dd>
                            <dt>{{ 'ticketaction.form.description'|trans }}</dt><dd>{% if ticketaction.description %}{{ ticketaction.description }}{% endif %}</dd>
                        </dl>
                    </div>
                </div>

            </div>

            <div class="col-xs-12 col-lg-6">
                <div class="panel panel-default">
                    <div class="panel-heading">
                        <h1 class="panel-title">{{ 'ticketaction.title.actions'|trans }}</h1>
                    </div>
                    <div class="table-responsive">
                        <table class="records_list table table-striped table-hover">
                            <thead>
                                <tr>
                                    <th>{{ 'action.form.actions'|trans }}</th>
                                    <th>{{ 'action.form.id'|trans }}</th>
                                </tr>
                            </thead>
                            <tbody>
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
        <!-- /#page-list -->

    </div>
    <!-- /#page-wrapper -->
{% endblock %}