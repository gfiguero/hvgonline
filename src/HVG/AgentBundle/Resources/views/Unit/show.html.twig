{% extends 'HVGSystemBundle::base.html.twig' %}
{% use 'HVGSystemBundle::navbar.html.twig' %}
{% use 'HVGAgentBundle::sidebar.html.twig' %}
{% use 'HVGSystemBundle::icons.html.twig' %}

{% set translation_domain = 'HVGSystemBundle' %}
{% trans_default_domain translation_domain %}

{% block title %}{{ 'unit.title.index'|trans }}{% endblock %}

{% block body %}
    <div id="page-wrapper">
        <div class="row" id="page-header">
            <div class="col-lg-12">
                <h1 class="page-header">{% block icons %}{{ parent() }}{% endblock %}{{ 'unit.title.index'|trans }}</h1>
                {% include 'HVGSystemBundle::flashbag.html.twig' with { 'translation_domain': translation_domain } %}
            </div>
        </div>
        <!-- /#page-header -->

        <div class="row" id="page-toolbar">
            <div class="col-lg-12">
                <div class="btn-toolbar">
                    <a type="button" class="btn btn-default" href="{{ path('agent_unit_index') }}">{{ icon('list fa-fw') }}&nbsp;{{ 'unit.list.link'|trans }}</a>
                </div>
            </div>
        </div>
        <!-- /#page-toolbar -->

        <div class="row" id="page-show">
            <div class="col-xs-12 col-lg-6">
                <div class="panel panel-default">
                    <div class="panel-heading">
                        <h1 class="panel-title">{{ 'unit.title.properties'|trans }}</h1>
                    </div>
                    <div class="panel-body">
                        <dl class="dl-horizontal dl-horizontal-sm dl-horizontal-md dl-horizontal-lg">
                            <dt>{{ 'unit.form.name'|trans }}</dt><dd>{% if unit.name %}{{ unit.name }}{% endif %}</dd>
                            <dt>{{ 'unit.form.building'|trans }}</dt><dd>{% if building %}<a href="{{ path('agent_building_show', { 'id' : building.id }) }}">{{ building.name }}</a>{% endif %}</dd>
                            <dt>{{ 'unit.form.community'|trans }}</dt><dd>{% if community %}<a href="{{ path('agent_community_show', { 'id' : community.id }) }}">{{ community.name }}</a>{% endif %}</dd>
{#}
                            <dt>{{ 'unit.form.id'|trans }}</dt><dd>{% if unit.id %}{{ unit.id }}{% endif %}</dd>
                            <dt>{{ 'unit.form.createdAt'|trans }}</dt><dd>{% if unit.createdAt %}{{ unit.createdAt|localizeddate('full', 'full', 'es_ES', 'America/Santiago', "d 'de' LLLL 'de' Y - HH:mm") }}{% endif %}</dd>
                            <dt>{{ 'unit.form.updatedAt'|trans }}</dt><dd>{% if unit.updatedAt %}{{ unit.updatedAt|localizeddate('full', 'full', 'es_ES', 'America/Santiago', "d 'de' LLLL 'de' Y - HH:mm") }}{% endif %}</dd>
{#}
                        </dl>
                    </div>
                </div>

                <div class="row">
                    <div class="col-lg-6">
                        <div class="panel panel-default">
                            <div class="panel-heading">
                                <h1 class="panel-title">{{ 'unit.title.charges'|trans }}</h1>
                            </div>
                            <div class="table-responsive">
                                <table class="records_list table table-striped table-hover">
                                    <thead>
                                        <tr>
                                            <th>{{ 'charge.form.actions'|trans }}</th>
                                            <th>{{ 'charge.form.amount'|trans }}</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                    {% for key, charge in charges %}
                                        <tr>
                                            <td>
                                                <div class="btn-toolbar">
                                                    <div class="btn-group" role="group">
                                                        <a type="button" class="btn btn-warning" href="{{ path('agent_charge_show', { 'id': charge.id }) }}" aria-label="{{ 'charge.show.link'|trans }}">{{ icon('search') }}</a>
                                                    </div>
                                                </div>
                                            </td>
                                            <td>{% if charge.amount %}{{ charge.amount }}{% endif %}</td>
                                        </tr>
                                    {% endfor %}
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>
                    <div class="col-lg-6">
                        <div class="panel panel-default">
                            <div class="panel-heading">
                                <h1 class="panel-title">{{ 'unit.title.allowances'|trans }}</h1>
                            </div>
                            <div class="table-responsive">
                                <table class="records_list table table-striped table-hover">
                                    <thead>
                                        <tr>
                                            <th>{{ 'allowance.form.actions'|trans }}</th>
                                            <th>{{ 'allowance.form.amount'|trans }}</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                    {% for key, allowance in allowances %}
                                        <tr>
                                            <td>
                                                <div class="btn-toolbar">
                                                    <div class="btn-group" role="group">
                                                        <a type="button" class="btn btn-warning" href="{{ path('agent_allowance_show', { 'id': allowance.id }) }}" aria-label="{{ 'allowance.show.link'|trans }}">{{ icon('search') }}</a>
                                                    </div>
                                                </div>
                                            </td>
                                            <td>{% if allowance.amount %}{{ allowance.amount }}{% endif %}</td>
                                        </tr>
                                    {% endfor %}
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <div class="col-xs-12 col-lg-6">
                <div class="panel panel-default">
                    <div class="panel-heading">
                        <h1 class="panel-title">{{ 'unit.title.tickets'|trans }}</h1>
                    </div>
                    <div class="table-responsive">
                        <table class="records_list table table-striped table-hover">
                            <thead>
                                <tr>
                                    <th>{{ 'ticket.form.actions'|trans }}</th>
                                    <th>{{ 'ticket.form.id'|trans }}</th>
                                </tr>
                            </thead>
                            <tbody>
                            {% for key, ticket in tickets %}
                                <tr>
                                    <td>
                                        <div class="btn-toolbar">
                                            <div class="btn-group" role="group">
                                                <a type="button" class="btn btn-warning" href="{{ path('agent_ticket_show', { 'id': ticket.id }) }}" aria-label="{{ 'ticket.show.link'|trans }}">{{ icon('search') }}</a>
                                            </div>
                                        </div>
                                    </td>
                                    <td>{% if ticket.id %}{{ ticket.id }}{% endif %}</td>
                                </tr>
                            {% endfor %}
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>

        </div>
        <!-- /#page-list -->

    </div>
    <!-- /#page-wrapper -->
{% endblock %}

{% block stylesheet %}
<style type="text/css">
#page-show1 {
    display: flex;
    flex-direction: column;
    flex-wrap: wrap;
}
</style>
{% endblock %}