{% extends 'HVGAgentBundle:UnitMemo:layout.html.twig' %}

{% set translation_domain = 'HVGAgentBundle' %}{% trans_default_domain translation_domain %}

{% block title %}{{ 'unitmemo.delete.title'|trans }}{% endblock %}

{% block unitmemo %}
    <div class="row" id="page-delete">
        <div class="col-md-6">
            <div class="panel panel-danger">
                <div class="panel-heading">
                    <h3 class="panel-title">{{ 'unitmemo.delete.title'|trans }}</h3>
                </div>
                <div class="panel-body">
                    <dl class="dl-horizontal">
                        <dt>{{ 'unitmemo.form.description'|trans }}</dt><dd>{% if unitmemo.description %}{{ unitmemo.description }}{% endif %}</dd>
                        <dt>{{ 'unitmemo.form.createdAt'|trans }}</dt><dd>{% if unitmemo.createdAt %}{{ unitmemo.createdAt|ago }}{% endif %}</dd>
                        <dt>{{ 'unitmemo.form.expiredAt'|trans }}</dt><dd>{% if unitmemo.expiredAt %}{{ unitmemo.expiredAt|ago }}{% endif %}</dd>
                        <dt>{{ 'unitmemo.form.unit'|trans }}</dt><dd>{% if unitmemo.unit %}{{ unitmemo.unit }}{% endif %}</dd>
                    </dl>
                </div>
            </div>
        </div>
        {{ form_start(deleteForm) }}
        {{ form_widget(deleteForm) }}
        <div class="col-md-6">
            <div class="btn-toolbar">
                <div class="btn-group"><button type="submit" class="btn btn-danger">{{ icon('times fa-fw') }}&nbsp;{{ 'unitmemo.delete.submit'|trans }}</button></div>
                <div class="btn-group"><a type="button" class="btn btn-default" href="{{ path('agent_unitmemo_show', {'unitmemo' : unitmemo.id}) }}">{{ icon('times fa-fw') }}&nbsp;{{ 'unitmemo.delete.cancel'|trans }}</a></div>
            </div>
        </div>
        {{ form_end(deleteForm) }}
    </div>
    <!-- /#page-list -->
{% endblock %}