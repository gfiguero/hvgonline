{% extends 'HVGAgentBundle:Base:layout.html.twig' %}

{% block title %}{{ 'unitmemo.index.title'|trans }}{% endblock %}

{% set translation_domain = 'HVGAgentBundle' %}{% trans_default_domain translation_domain %}

{% block agent %}
    <div id="page-wrapper">
        <div class="row" id="page-header">
            <div class="col-lg-12">
                <h1 class="page-header">{% block icons %}{{ parent() }}{% endblock %}{{ 'unitmemo.index.title'|trans }}</h1>
            </div>
        </div>
        <!-- /#page-header -->

        <div class="row" id="page-toolbar">
            <div class="col-lg-12">
                <div class="btn-toolbar">
                    <a type="button" class="btn btn-default" href="{{ path('agent_unitmemo_index', {community: unit.community.id, unitgroup: unit.unitgroup.id, unit: unit.id}) }}">{{ icon('list') }}&nbsp;{{ 'unitmemo.list.link'|trans }}</a>
                </div>
            </div>
        </div>
        <!-- /#page-toolbar -->

        <div class="row" id="page-new">
            <div class="col-lg-12">
                <div class="panel panel-default">
                    <div class="panel-heading">
                        <h1 class="panel-title">{{ 'unitmemo.new.title'|trans }}</h1>
                    </div>
                    <div class="panel-body">
                        {{ form_start(newForm, { 'style': 'horizontal' }) }}
                            {{ form_widget(newForm) }}
                            <div class="form-group"><div class="col-lg-offset-4 col-lg-8">
                                <button type="submit" class="btn btn-primary">{{ icon('check fa-fw') }}&nbsp;{{ 'unitmemo.new.submit'|trans }}</button>
                            </div></div>
                        {{ form_end(newForm) }}
                    </div>
                </div>
            </div>
        </div>
        <!-- /#page-new -->

    </div>
    <!-- /#page-wrapper -->

{% endblock %}
