{% extends 'HVGAgentBundle:UnitMemo:layout.html.twig' %}

{% set translation_domain = 'HVGAgentBundle' %}{% trans_default_domain translation_domain %}

{% block title %}{{ 'unitmemo.show.title'|trans }}{% endblock %}

{% block unitmemo %}
    <div class="row" id="page-show">
        <div class="col-md-6">
            <div class="panel panel-default">
                <div class="panel-heading">
                    <h3 class="panel-title">{{ 'unitmemo.show.title'|trans }}</h3>
                </div>
                <div class="panel-body">
                    <dl class="dl-horizontal">
                        <dt>{{ 'unitmemo.form.description'|trans }}</dt><dd>{% if unitmemo.description %}{{ unitmemo.description }}{% endif %}</dd>
                        <dt>{{ 'unitmemo.form.createdAt'|trans }}</dt><dd>{% if unitmemo.createdAt %}{{ unitmemo.createdAt|ago }}{% endif %}</dd>
                        <dt>{{ 'unitmemo.form.expiredAt'|trans }}</dt><dd>{% if unitmemo.expiredAt %}{{ unitmemo.expiredAt|ago }}{% endif %}</dd>
                        <dt>{{ 'unitmemo.form.unit'|trans }}</dt><dd>{% if unitmemo.unit %}{{ unitmemo.unit }}{% endif %}</dd>
                    </dl>
                </div>
            </div>
        </div>
        <div class="col-md-6">
            <div class="btn-toolbar">
                <div class="btn-group"><a href="{{ path('agent_unitmemo_edit', {'unitmemo' : unitmemo.id}) }}" class="btn btn-warning">{{ icon('edit fa-fw') }}&nbsp;{{ 'unitmemo.edit.link'|trans }}</a></div>
                <div class="btn-group"><a href="{{ path('agent_unitmemo_delete', {'unitmemo' : unitmemo.id}) }}" class="btn btn-danger">{{ icon('times fa-fw') }}&nbsp;{{ 'unitmemo.delete.link'|trans }}</a></div>
            </div>
        </div>
    </div>
    <!-- /#page-list -->
{% endblock %}