{% extends 'HVGAgentBundle:UnitResident:layout.html.twig' %}

{% set translation_domain = 'HVGAgentBundle' %}{% trans_default_domain translation_domain %}

{% block title %}{{ 'unitresident.delete.title'|trans }}{% endblock %}

{% block unitresident %}
    <div class="row" id="page-delete">
        <div class="col-md-6">
            <div class="panel panel-danger">
                <div class="panel-heading">
                    <h3 class="panel-title">{{ 'unitresident.delete.title'|trans }}</h3>
                </div>
                <div class="panel-body">
                    <dl class="dl-horizontal">
                        <dt>{{ 'unitresident.form.name'|trans }}</dt><dd>{% if unitresident.name %}{{ unitresident.name }}{% endif %}</dd>
                        <dt>{{ 'unitresident.form.phone'|trans }}</dt><dd>{% if unitresident.phone %}{{ unitresident.phone }}{% endif %}</dd>
                        <dt>{{ 'unitresident.form.email'|trans }}</dt><dd>{% if unitresident.email %}{{ unitresident.email }}{% endif %}</dd>
                        <dt>{{ 'unitresident.form.age'|trans }}</dt><dd>{% if unitresident.age %}{{ unitresident.age }}{% endif %}</dd>
                        <dt>{{ 'unitresident.form.assistance'|trans }}</dt><dd>{% if unitresident.assistance %}{{ icon('check fa-fw') }}{% else %}{{ icon('times fa-fw') }}{% endif %}</dd>
                        <dt>{{ 'unitresident.form.unit'|trans }}</dt><dd>{% if unitresident.unit %}{{ unitresident.unit }}{% endif %}</dd>
                    </dl>
                </div>
            </div>
        </div>
        {{ form_start(deleteForm) }}
        {{ form_widget(deleteForm) }}
        <div class="col-md-6">
            <div class="btn-toolbar">
                <div class="btn-group"><button type="submit" class="btn btn-danger">{{ icon('times fa-fw') }}&nbsp;{{ 'unitresident.delete.submit'|trans }}</button></div>
                <div class="btn-group"><a type="button" class="btn btn-default" href="{{ path('agent_unitresident_show', {'unitresident' : unitresident.id}) }}">{{ icon('times fa-fw') }}&nbsp;{{ 'unitresident.delete.cancel'|trans }}</a></div>
            </div>
        </div>
        {{ form_end(deleteForm) }}
    </div>
    <!-- /#page-list -->
{% endblock %}