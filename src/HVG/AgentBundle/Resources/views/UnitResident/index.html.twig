{% extends 'HVGAgentBundle:UnitResident:layout.html.twig' %}

{% set translation_domain = 'HVGAgentBundle' %}{% trans_default_domain translation_domain %}

{% block title %}{{ 'unitresident.index.title'|trans }}{% endblock %}

{% block unitresident %}
    <div class="row" id="page-list">
        <div class="col-lg-12">
            <div class="panel panel-default">
                <div class="panel-heading">
                    <h1 class="panel-title">{{ 'unitresident.index.list'|trans }}</h1>
                </div>
                {% if unitresidents is empty %}
                <div class="panel-body">
                    <div class="text-center">{{ 'unitresident.index.empty'|trans }}</div>
                </div>
                {% else %}
                <div class="table-responsive">
                    <table class="records_list table table-striped table-hover table-middle">
                        <thead>
                            <tr>
                                <th>
                                    <div class="btn-group"><a href="#" class="btn btn-xs btn-default disabled">{{ icon('search fa-fw') }}</a></div>
                                    <div class="btn-group"><a href="#" class="btn btn-xs btn-default disabled">{{ icon('edit fa-fw') }}</a></div>
                                    <div class="btn-group"><a href="#" class="btn btn-xs btn-default disabled">{{ icon('times fa-fw') }}</a></div>
                                </th>
                                <th>{{ knp_pagination_sortable(unitresidents, 'unitresident.form.name'|trans, 'name') }}{% if sort == 'name' %}{% if direction == 'desc' %}{{ icon('caret-down') }}{% else %}{{ icon('caret-up') }}{% endif %}{% endif %}</th>
                                <th>{{ knp_pagination_sortable(unitresidents, 'unitresident.form.email'|trans, 'email') }}{% if sort == 'email' %}{% if direction == 'desc' %}{{ icon('caret-down') }}{% else %}{{ icon('caret-up') }}{% endif %}{% endif %}</th>
                                <th>{{ knp_pagination_sortable(unitresidents, 'unitresident.form.phone'|trans, 'phone') }}{% if sort == 'phone' %}{% if direction == 'desc' %}{{ icon('caret-down') }}{% else %}{{ icon('caret-up') }}{% endif %}{% endif %}</th>
                                <th>{{ knp_pagination_sortable(unitresidents, 'unitresident.form.age'|trans, 'age') }}{% if sort == 'age' %}{% if direction == 'desc' %}{{ icon('caret-down') }}{% else %}{{ icon('caret-up') }}{% endif %}{% endif %}</th>
                                <th>{{ knp_pagination_sortable(unitresidents, 'unitresident.form.assistance'|trans, 'assistance') }}{% if sort == 'assistance' %}{% if direction == 'desc' %}{{ icon('caret-down') }}{% else %}{{ icon('caret-up') }}{% endif %}{% endif %}</th>
                                <th>{{ knp_pagination_sortable(unitresidents, 'unitresident.form.unit'|trans, 'unit') }}{% if sort == 'unit' %}{% if direction == 'desc' %}{{ icon('caret-down') }}{% else %}{{ icon('caret-up') }}{% endif %}{% endif %}</th>
                            </tr>
                        </thead>
                        <tbody>
                        {% for unitresident in unitresidents %}
                            <tr>
                                <td>
                                    <div class="btn-group"><a href="{{ path('agent_unitresident_show', {'unitresident' : unitresident.id}) }}" class="btn btn-xs btn-default">{{ icon('search fa-fw') }}</a></div>
                                    <div class="btn-group"><a href="{{ path('agent_unitresident_edit', {'unitresident' : unitresident.id}) }}" class="btn btn-xs btn-warning">{{ icon('edit fa-fw') }}</a></div>
                                    <div class="btn-group"><a href="{{ path('agent_unitresident_delete', {'unitresident' : unitresident.id}) }}" class="btn btn-xs btn-danger">{{ icon('times fa-fw') }}</a></div>
                                </td>
                                <td>{% if unitresident.name %}{{ unitresident.name }}{% endif %}</td>
                                <td>{% if unitresident.email %}{{ unitresident.email }}{% endif %}</td>
                                <td>{% if unitresident.phone %}{{ unitresident.phone }}{% endif %}</td>
                                <td>{% if unitresident.age %}{{ unitresident.age }}{% endif %}</td>
                                <td>{% if unitresident.assistance %}{{ icon('check fa-fw') }}{% else %}{{ icon('times fa-fw') }}{% endif %}</td>
                                <td>{% if unitresident.unit %}{{ unitresident.unit }}{% endif %}</td>
                            </tr>
                        {% endfor %}
                        </tbody>
                    </table>
                </div>
                {% endif %}
            </div>

            {% if unitresidents is not empty %}
            <div class="text-center">
                {{ knp_pagination_render(unitresidents) }}
            </div>
            {% endif %}
        </div>
    </div>
    <!-- /#page-list -->        
{% endblock %}