{% extends 'HVGAgentBundle:Warehouse:layout.html.twig' %}

{% set translation_domain = 'HVGAgentBundle' %}{% trans_default_domain translation_domain %}

{% block title %}{{ 'warehouse.delete.title'|trans }}{% endblock %}

{% block warehouse %}
    <div class="row" id="page-delete">
        <div class="col-md-6">
            <div class="panel panel-danger">
                <div class="panel-heading">
                    <h3 class="panel-title">{{ 'warehouse.delete.title'|trans }}</h3>
                </div>
                <div class="panel-body">
                    <dl class="dl-horizontal">
                        <dt>{{ 'warehouse.form.name'|trans }}</dt><dd>{% if warehouse.name %}{{ warehouse.name }}{% endif %}</dd>
                        <dt>{{ 'warehouse.form.unit'|trans }}</dt><dd>{% if warehouse.unit %}{{ warehouse.unit }}{% endif %}</dd>
                    </dl>
                </div>
            </div>
        </div>
        {{ form_start(deleteForm) }}
        {{ form_widget(deleteForm) }}
        <div class="col-md-6">
            <div class="btn-toolbar">
                <div class="btn-group"><button type="submit" class="btn btn-danger">{{ icon('times fa-fw') }}&nbsp;{{ 'warehouse.delete.submit'|trans }}</button></div>
                <div class="btn-group"><a type="button" class="btn btn-default" href="{{ path('agent_warehouse_show', {'warehouse' : warehouse.id}) }}">{{ icon('times fa-fw') }}&nbsp;{{ 'warehouse.delete.cancel'|trans }}</a></div>
            </div>
        </div>
        {{ form_end(deleteForm) }}
    </div>
    <!-- /#page-list -->
{% endblock %}