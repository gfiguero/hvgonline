{% extends 'HVGAgentBundle:Warehouse:layout.html.twig' %}

{% set translation_domain = 'HVGAgentBundle' %}{% trans_default_domain translation_domain %}

{% block title %}{{ 'warehouse.show.title'|trans }}{% endblock %}

{% block warehouse %}
    <div class="row" id="page-show">
        <div class="col-md-6">
            <div class="panel panel-default">
                <div class="panel-heading">
                    <h3 class="panel-title">{{ 'warehouse.show.title'|trans }}</h3>
                </div>
                <div class="panel-body">
                    <dl class="dl-horizontal">
                        <dt>{{ 'warehouse.form.name'|trans }}</dt><dd>{% if warehouse.name %}{{ warehouse.name }}{% endif %}</dd>
                        <dt>{{ 'warehouse.form.unit'|trans }}</dt><dd>{% if warehouse.unit %}{{ warehouse.unit }}{% endif %}</dd>
                    </dl>
                </div>
            </div>
        </div>
        <div class="col-md-6">
            <div class="btn-toolbar">
                <div class="btn-group"><a href="{{ path('agent_warehouse_edit', {'warehouse' : warehouse.id}) }}" class="btn btn-warning">{{ icon('edit fa-fw') }}&nbsp;{{ 'warehouse.edit.link'|trans }}</a></div>
                <div class="btn-group"><a href="{{ path('agent_warehouse_delete', {'warehouse' : warehouse.id}) }}" class="btn btn-danger">{{ icon('times fa-fw') }}&nbsp;{{ 'warehouse.delete.link'|trans }}</a></div>
            </div>
        </div>
    </div>
    <!-- /#page-list -->
{% endblock %}