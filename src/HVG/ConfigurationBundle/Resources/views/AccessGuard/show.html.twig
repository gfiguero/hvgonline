{% extends 'HVGConfigurationBundle:AccessGuard:layout.html.twig' %}

{% set translation_domain = 'HVGConfigurationBundle' %}{% trans_default_domain translation_domain %}

{% block title %}{{ 'accessguard.show.title'|trans }}{% endblock %}

{% block accessguard %}
    <div class="row" id="page-show">
        <div class="col-md-6">
            <div class="panel panel-success">
                <div class="panel-heading">
                    <h3 class="panel-title">{{ 'accessguard.show.title'|trans }}</h3>
                </div>
                <div class="panel-body">
                    <dl class="dl-horizontal">
                        <dt>{{ 'accessguard.form.name'|trans }}</dt><dd>{% if accessguard.name %}{{ accessguard.name }}{% endif %}</dd>
                        <dt>{{ 'accessguard.form.community'|trans }}</dt><dd>{% if accessguard.community %}{{ accessguard.community }}{% endif %}</dd>
                    </dl>
                </div>
            </div>                
        </div>
        <div class="col-md-6">
            <div class="btn-toolbar">
                <div class="btn-group"><a href="{{ path('configuration_accessguard_edit', {'id' : accessguard.id}) }}" class="btn btn-warning">{{ icon('edit fa-fw') }}&nbsp;{{ 'accessguard.edit.link'|trans }}</a></div>
                <div class="btn-group"><a href="{{ path('configuration_accessguard_delete', {'id' : accessguard.id}) }}" class="btn btn-danger">{{ icon('times fa-fw') }}&nbsp;{{ 'accessguard.delete.link'|trans }}</a></div>
            </div>
        </div>
    </div>
    <!-- /#page-list -->        
{% endblock %}