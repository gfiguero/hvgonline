{% extends 'HVGConfigurationBundle:Base:base.html.twig' %}
{% use 'HVGConfigurationBundle:Base:header.html.twig' %}
{% use 'HVGConfigurationBundle:Base:aside.html.twig' %}
{% use 'HVGConfigurationBundle:Base:icons.html.twig' %}

{% block body %}
    {% block header %}{{ parent() }}{% endblock %}
    <div class="container-fluid">
        <div class="row">
            <aside class="col-sm-3 col-md-2">
                {% block aside %}{{ parent() }}{% endblock %}
            </aside>
            <div class="col-sm-9 col-md-10">
                {% block configuration %}{% endblock %}
            </div>
        </div>
    </div>
{% endblock %}