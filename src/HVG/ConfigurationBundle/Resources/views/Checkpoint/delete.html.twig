{% extends 'HVGConfigurationBundle:Checkpoint:layout.html.twig' %}

{% set translation_domain = 'HVGConfigurationBundle' %}{% trans_default_domain translation_domain %}

{% block title %}{{ 'checkpoint.delete.title'|trans }}{% endblock %}

{% block checkpoint %}
    <div class="row" id="page-delete">
        <div class="col-md-6">
            <div class="panel panel-danger">
                <div class="panel-heading">
                    <h3 class="panel-title">{{ 'checkpoint.delete.title'|trans }}</h3>
                </div>
                <div class="panel-body">
                    <dl class="dl-horizontal">
                        <dt>{{ 'checkpoint.form.name'|trans }}</dt><dd>{% if checkpoint.name %}{{ checkpoint.name }}{% endif %}</dd>
                        <dt>{{ 'checkpoint.form.community'|trans }}</dt><dd>{% if checkpoint.community %}{{ checkpoint.community }}{% endif %}</dd>
                    </dl>
                </div>
            </div>
        </div>
        {{ form_start(deleteForm) }}
        {{ form_widget(deleteForm) }}
        <div class="col-md-6">
            <div class="btn-toolbar">
                <div class="btn-group"><button type="submit" class="btn btn-danger">{{ icon('times fa-fw') }}&nbsp;{{ 'checkpoint.delete.submit'|trans }}</button></div>
                <div class="btn-group"><a type="button" class="btn btn-default" href="{{ path('configuration_checkpoint_show', {'id' : checkpoint.id}) }}">{{ icon('times fa-fw') }}&nbsp;{{ 'checkpoint.delete.cancel'|trans }}</a></div>
            </div>
        </div>
        {{ form_end(deleteForm) }}
    </div>
    <!-- /#page-list -->
{% endblock %}