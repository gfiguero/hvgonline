{% extends 'HVGConfigurationBundle:Checkpoint:layout.html.twig' %}

{% set translation_domain = 'HVGConfigurationBundle' %}{% trans_default_domain translation_domain %}

{% block title %}{{ 'checkpoint.show.title'|trans }}{% endblock %}

{% block checkpoint %}
    <div class="row" id="page-show">
        <div class="col-md-6">
            <div class="panel panel-success">
                <div class="panel-heading">
                    <h3 class="panel-title">{{ 'checkpoint.show.title'|trans }}</h3>
                </div>
                <div class="panel-body">
                    <dl class="dl-horizontal">
                        <dt>{{ 'checkpoint.form.name'|trans }}</dt><dd>{% if checkpoint.name %}{{ checkpoint.name }}{% endif %}</dd>
                        <dt>{{ 'checkpoint.form.community'|trans }}</dt><dd>{% if checkpoint.community %}{{ checkpoint.community }}{% endif %}</dd>
                    </dl>
                </div>
            </div>                
        </div>
        <div class="col-md-6">
            <div class="btn-toolbar">
                <div class="btn-group"><a href="{{ path('configuration_checkpoint_edit', {'id' : checkpoint.id}) }}" class="btn btn-warning">{{ icon('edit fa-fw') }}&nbsp;{{ 'checkpoint.edit.link'|trans }}</a></div>
                <div class="btn-group"><a href="{{ path('configuration_checkpoint_delete', {'id' : checkpoint.id}) }}" class="btn btn-danger">{{ icon('times fa-fw') }}&nbsp;{{ 'checkpoint.delete.link'|trans }}</a></div>
            </div>
        </div>
    </div>
    <!-- /#page-list -->        
{% endblock %}