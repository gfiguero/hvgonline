{% extends 'HVGConfigurationBundle:Service:layout.html.twig' %}

{% set translation_domain = 'HVGConfigurationBundle' %}{% trans_default_domain translation_domain %}

{% block title %}{{ 'service.new.title'|trans }}{% endblock %}

{% block service %}
    <div class="row" id="page-new">
        <div class="col-md-12">
            <div class="panel panel-success">
                <div class="panel-heading">
                    <h3 class="panel-title">{{ 'service.new.title'|trans }}</h3>
                </div>
                <div class="panel-body">
                    {{ form_start(newForm, {'style' : 'horizontal'}) }}
                    {{ form_widget(newForm) }}
                    <div class="form-group">
                        <div class="col-md-offset-4 col-md-8">
                            <button type="submit" class="btn btn-primary">{{ icon('save fa-fw') }}&nbsp;{{ 'service.new.submit'|trans }}</button>
                        </div>
                    </div>
                    {{ form_end(newForm) }}
                </div>
            </div>                
        </div>
    </div>
    <!-- /#page-list -->        
{% endblock %}