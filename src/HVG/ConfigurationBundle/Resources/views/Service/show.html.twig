{% extends 'HVGConfigurationBundle:Service:layout.html.twig' %}

{% set translation_domain = 'HVGConfigurationBundle' %}{% trans_default_domain translation_domain %}

{% block title %}{{ 'service.show.title'|trans }}{% endblock %}

{% block service %}
    <div class="row" id="page-show">
        <div class="col-md-6">
            <div class="panel panel-success">
                <div class="panel-heading">
                    <h3 class="panel-title">{{ 'service.show.title'|trans }}</h3>
                </div>
                <div class="panel-body">
                    <dl class="dl-horizontal">
                        <dt>{{ 'service.form.name'|trans }}</dt><dd>{% if service.name %}{{ service.name }}{% endif %}</dd>
                        <dt>{{ 'service.form.community'|trans }}</dt><dd>{% if service.community %}{{ service.community }}{% endif %}</dd>
                    </dl>
                </div>
            </div>                
        </div>
        <div class="col-md-6">
            <div class="btn-toolbar">
                <div class="btn-group"><a href="{{ path('configuration_service_edit', {'id' : service.id}) }}" class="btn btn-warning">{{ icon('edit fa-fw') }}&nbsp;{{ 'service.edit.link'|trans }}</a></div>
                <div class="btn-group"><a href="{{ path('configuration_service_delete', {'id' : service.id}) }}" class="btn btn-danger">{{ icon('times fa-fw') }}&nbsp;{{ 'service.delete.link'|trans }}</a></div>
            </div>
        </div>
    </div>
    <!-- /#page-list -->        
{% endblock %}