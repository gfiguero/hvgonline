{% extends 'HVGConfigurationBundle:ServiceAgent:layout.html.twig' %}

{% set translation_domain = 'HVGConfigurationBundle' %}{% trans_default_domain translation_domain %}

{% block title %}{{ 'serviceagent.show.title'|trans }}{% endblock %}

{% block serviceagent %}
    <div class="row" id="page-show">
        <div class="col-md-6">
            <div class="panel panel-success">
                <div class="panel-heading">
                    <h3 class="panel-title">{{ 'serviceagent.show.title'|trans }}</h3>
                </div>
                <div class="panel-body">
                    <dl class="dl-horizontal">
                        <dt>{{ 'serviceagent.form.name'|trans }}</dt><dd>{% if serviceagent.name %}{{ serviceagent.name }}{% endif %}</dd>
                        <dt>{{ 'serviceagent.form.community'|trans }}</dt><dd>{% if serviceagent.community %}{{ serviceagent.community }}{% endif %}</dd>
                    </dl>
                </div>
            </div>                
        </div>
        <div class="col-md-6">
            <div class="btn-toolbar">
                <div class="btn-group"><a href="{{ path('configuration_serviceagent_edit', {'id' : serviceagent.id}) }}" class="btn btn-warning">{{ icon('edit fa-fw') }}&nbsp;{{ 'serviceagent.edit.link'|trans }}</a></div>
                <div class="btn-group"><a href="{{ path('configuration_serviceagent_delete', {'id' : serviceagent.id}) }}" class="btn btn-danger">{{ icon('times fa-fw') }}&nbsp;{{ 'serviceagent.delete.link'|trans }}</a></div>
            </div>
        </div>
    </div>
    <!-- /#page-list -->        
{% endblock %}