{% extends 'HVGConfigurationBundle:User:layout.html.twig' %}

{% set translation_domain = 'HVGConfigurationBundle' %}{% trans_default_domain translation_domain %}

{% block title %}{{ 'user.edit.title'|trans }}{% endblock %}

{% block user %}
    <div class="row" id="page-edit">
        <div class="col-md-12">
            <div class="panel panel-success">
                <div class="panel-heading">
                    <h3 class="panel-title">{{ 'user.edit.title'|trans }}</h3>
                </div>
                <div class="panel-body">
                    {{ form_start(editForm, {'style' : 'horizontal'}) }}
                    {{ form_widget(editForm) }}
                    <div class="form-group">
                        <div class="col-md-offset-4 col-md-8">
                            <button type="submit" class="btn btn-primary">{{ icon('save fa-fw') }}&nbsp;{{ 'user.edit.submit'|trans }}</button>
                        </div>
                    </div>
                    {{ form_end(editForm) }}
                </div>
            </div>                
        </div>
    </div>
    <!-- /#page-list -->        
{% endblock %}