{% extends 'HVGConfigurationBundle:User:layout.html.twig' %}

{% set translation_domain = 'HVGConfigurationBundle' %}{% trans_default_domain translation_domain %}

{% block title %}{{ 'user.show.title'|trans }}{% endblock %}

{% block user %}
    <div class="row" id="page-show">
        <div class="col-md-6">
            <div class="panel panel-success">
                <div class="panel-heading">
                    <h3 class="panel-title">{{ 'user.show.title'|trans }}</h3>
                </div>
                <div class="panel-body">
                    <dl class="dl-horizontal">
                        <dt>{{ 'user.form.person'|trans }}</dt><dd>{% if user.person %}{{ user.person }}{% endif %}</dd>
                    </dl>
                </div>
            </div>                
        </div>
        <div class="col-md-6">
            <div class="btn-toolbar">
                <div class="btn-group"><a href="{{ path('configuration_user_edit', {'id' : user.id}) }}" class="btn btn-warning">{{ icon('edit fa-fw') }}&nbsp;{{ 'user.edit.link'|trans }}</a></div>
                <div class="btn-group"><a href="{{ path('configuration_user_delete', {'id' : user.id}) }}" class="btn btn-danger">{{ icon('times fa-fw') }}&nbsp;{{ 'user.delete.link'|trans }}</a></div>
            </div>
        </div>
    </div>
    <!-- /#page-list -->        
{% endblock %}