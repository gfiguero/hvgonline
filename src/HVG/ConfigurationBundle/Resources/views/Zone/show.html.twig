{% extends 'HVGConfigurationBundle:Zone:layout.html.twig' %}

{% set translation_domain = 'HVGConfigurationBundle' %}{% trans_default_domain translation_domain %}

{% block title %}{{ 'zone.show.title'|trans }}{% endblock %}

{% block zone %}
    <div class="row" id="page-show">
        <div class="col-md-6">
            <div class="panel panel-success">
                <div class="panel-heading">
                    <h3 class="panel-title">{{ 'zone.show.title'|trans }}</h3>
                </div>
                <div class="panel-body">
                    <dl class="dl-horizontal">
                        <dt>{{ 'zone.form.name'|trans }}</dt><dd>{% if zone.name %}{{ zone.name }}{% endif %}</dd>
                        <dt>{{ 'zone.form.community'|trans }}</dt><dd>{% if zone.community %}{{ zone.community }}{% endif %}</dd>
                    </dl>
                </div>
            </div>                
        </div>
        <div class="col-md-6">
            <div class="btn-toolbar">
                <div class="btn-group"><a href="{{ path('configuration_zone_edit', {'id' : zone.id}) }}" class="btn btn-warning">{{ icon('edit fa-fw') }}&nbsp;{{ 'zone.edit.link'|trans }}</a></div>
                <div class="btn-group"><a href="{{ path('configuration_zone_delete', {'id' : zone.id}) }}" class="btn btn-danger">{{ icon('times fa-fw') }}&nbsp;{{ 'zone.delete.link'|trans }}</a></div>
            </div>
        </div>
    </div>
    <!-- /#page-list -->        
{% endblock %}