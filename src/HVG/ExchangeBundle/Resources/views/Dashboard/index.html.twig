{% extends 'HVGExchangeBundle:Dashboard:layout.html.twig' %}

{% set translation_domain = 'HVGExchangeBundle' %}{% trans_default_domain translation_domain %}

{% block title %}{{ 'dashboard.index.title'|trans }}{% endblock %}

{% block dashboard %}
    <div class="row" id="exchange-dashboard">
        <div class="col-md-3">
            <div class="panel panel-primary">
                <div class="panel-heading">
                    <div class="row">
                        <div class="col-xs-3">{{ icon('ticket fa-fw fa-4x') }}</div>
                        <div class="col-xs-9 text-right">
                            {% set total = 0 %}{% for counter in liability_counter %}{% set total = total + counter %}{% endfor %}
                            <a type="button" class="btn btn-primary btn-block btn-lg" href="{{ path('exchange_ticketliability_index') }}">{{ 'dashboard.ticket.counter.liability'|trans }}&nbsp;<span class="badge">{{ total }}</span></a>
                        </div>
                    </div>
                </div>
                <div class="panel-body">
                    <a type="button" class="btn btn-primary btn-block" href="{{ path('exchange_ticketliability_index', {status: 2}) }}">{{ 'dashboard.ticket.link.assigned'|trans }}&nbsp;<span class="badge">{{ liability_counter[2] }}</span></a>
                    <a type="button" class="btn btn-primary btn-block" href="{{ path('exchange_ticketliability_index', {status: 3}) }}">{{ 'dashboard.ticket.link.progress'|trans }}&nbsp;<span class="badge">{{ liability_counter[3] }}</span></a>
                    <a type="button" class="btn btn-primary btn-block" href="{{ path('exchange_ticketliability_index', {status: 4}) }}">{{ 'dashboard.ticket.link.pending'|trans }}&nbsp;<span class="badge">{{ liability_counter[4] }}</span></a>
                </div>
            </div>
        </div>

        <div class="col-md-3">
            <div class="panel panel-primary">
                <div class="panel-heading">
                    <div class="row">
                        <div class="col-xs-3">{{ icon('ticket fa-fw fa-4x') }}</div>
                        <div class="col-xs-9 text-right">
                            {% set total = 0 %}{% for counter in zone_counter %}{% set total = total + counter %}{% endfor %}
                            <a type="button" class="btn btn-primary btn-block btn-lg" href="{{ path('exchange_ticketzone_index') }}">{{ 'dashboard.ticket.counter.zone'|trans }}&nbsp;<span class="badge">{{ total }}</span></a>
                        </div>
                    </div>
                </div>
                <div class="panel-body">
                    <a type="button" class="btn btn-primary btn-block" href="{{ path('exchange_ticketzone_index', {status: 1}) }}">{{ 'dashboard.ticket.link.new'|trans }}&nbsp;<span class="badge">{{ zone_counter[1] }}</span></a>
                    <a type="button" class="btn btn-primary btn-block" href="{{ path('exchange_ticketzone_index', {status: 2}) }}">{{ 'dashboard.ticket.link.assigned'|trans }}&nbsp;<span class="badge">{{ zone_counter[2] }}</span></a>
                    <a type="button" class="btn btn-primary btn-block" href="{{ path('exchange_ticketzone_index', {status: 3}) }}">{{ 'dashboard.ticket.link.progress'|trans }}&nbsp;<span class="badge">{{ zone_counter[3] }}</span></a>
                    <a type="button" class="btn btn-primary btn-block" href="{{ path('exchange_ticketzone_index', {status: 4}) }}">{{ 'dashboard.ticket.link.pending'|trans }}&nbsp;<span class="badge">{{ zone_counter[4] }}</span></a>
                </div>
            </div>
        </div>
{#}
        <div class="col-md-3">
            <div class="panel panel-primary">
                <div class="panel-heading">
                    <div class="row">
                        <div class="col-xs-3">{{ icon('hand-o-up fa-fw fa-5x') }}</div>
                        <div class="col-xs-9 text-right">
                            <div class="huge">{{ petitions|length }}</div>
                            <div>{{ 'dashboard.counter.petition'|trans }}</div>
                        </div>
                    </div>
                </div>
                <a href="{{ path('agent_petition_received') }}">
                    <div class="panel-footer">
                        <div class="pull-left">{{ 'petition.received.link'|trans }}</div>
                        <div class="pull-right">{{ icon('arrow-circle-right fa-fw fa-lg') }}</div>
                        <div class="clearfix"></div>
                    </div>
                </a>
            </div>
        </div>
    </div>
{#}
    <!-- /#exchange-dashboard -->

{% endblock %}
