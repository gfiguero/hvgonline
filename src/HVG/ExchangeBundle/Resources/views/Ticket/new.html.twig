{% extends 'HVGExchangeBundle:Ticket:layout.html.twig' %}

{% set translation_domain = 'HVGExchangeBundle' %}

{% trans_default_domain translation_domain %}

{% block title %}{{ 'ticket.index.title'|trans }}{% endblock %}

{% block ticket %}
    <div class="row" id="page-new">
        <div class="col-xs-12">
            <div class="panel panel-default">
                <div class="panel-heading">
                    <h1 class="panel-title">{{ 'ticket.new.title'|trans }}</h1>
                </div>
                <div class="panel-body">
                    {{ form_start(ticketNewForm, { 'style': 'horizontal' }) }}
                        {{ form_widget(ticketNewForm) }}
                        <div class="form-group"><div class="col-lg-offset-4 col-lg-8">
                            <button type="submit" class="btn btn-primary">{{ icon('check fa-fw') }}&nbsp;{{ 'ticket.new.submit'|trans }}</button>
                        </div></div>
                    {{ form_end(ticketNewForm) }}
                </div>
            </div>
        </div>
    </div>
    <!-- /#page-new -->

{% endblock %}


{% block javascript %}
<script type="text/javascript">
$(document).ready(function() {
    var optionsFileinput = {
        showPreview: false,
        showRemove: false,
        showUpload: false,
        showCancel: false,
        showClose: false,
        showZoom: false,
        browseClass: 'btn btn-primary btn-block',
        browseLabel: 'Seleccionar Archivo'
    }
    $(".fileinput").find('input').fileinput(optionsFileinput);
});
</script>
{% endblock %}