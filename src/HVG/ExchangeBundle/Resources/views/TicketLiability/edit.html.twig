{% extends 'HVGExchangeBundle:TicketLiability:layout.html.twig' %}

{% set translation_domain = 'HVGExchangeBundle' %}

{% trans_default_domain translation_domain %}

{% block title %}{{ 'ticket.index.title'|trans }}{% endblock %}

{% block ticket %}
    <div class="row" id="page-edit">
        <div class="col-xs-12">
            <div class="panel panel-success">
                <div class="panel-heading">
                    <h1 class="panel-title">{{ 'ticket.edit.title'|trans }}</h1>
                </div>
                <div class="panel-body">
                    {{ form_start(editForm, { 'style': 'horizontal' }) }}
                        {{ form_widget(editForm) }}
                        <div class="form-group"><div class="col-lg-offset-4 col-lg-8">
                            <button type="submit" class="btn btn-success">{{ icon('edit fa-fw') }}&nbsp;{{ 'ticket.edit.submit'|trans }}</button>
                        </div></div>
                    {{ form_end(editForm) }}
                </div>
            </div>
        </div>
    </div>
    <!-- /#page-edit -->

{% endblock %}
