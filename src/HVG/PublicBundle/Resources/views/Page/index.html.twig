{% extends 'HVGPublicBundle:Base:layout.html.twig' %}

{% trans_default_domain 'HVGPublicBundle' %}

{% block title %}{{ 'page.index.title'|trans }}{% endblock %}

{% block public %}
    <div class="container">
        <div class="row">
            <div class="col-md-12">
                <h1 class="page-header">{{ 'page.index.title'|trans }}</h1>
            </div>
            <div class="col-md-6">
                <div class="panel panel-info">
                    <div class="panel-heading">
                        <div class="row">
                            <div class="col-md-4">
                                <h1 class="text-center">
                                    {{ icon('ticket fa-fw fa-2x') }}
                                </h1>
                            </div>
                            <div class="col-md-8">
                                <h1>{{ 'ticket.index.title'|trans }}</h1>
                            </div>
                        </div>
                    </div>
                    <div class="panel-body">
                        <div class="text-right">
                            <a href="{{ path('public_ticket_new', {hash: community.hash}) }}">
                                <h4>Acceder&nbsp;{{ icon('arrow-circle-right') }}</h4>
                            </a>
                        </div>
                    </div>
                </div>
            </div>

            <div class="col-md-6">
                <div class="panel panel-info">
                    <div class="panel-heading">
                        <div class="row">
                            <div class="col-md-4">
                                <h1 class="text-center">
                                    {{ icon('paw fa-fw fa-2x') }}
                                </h1>
                            </div>
                            <div class="col-md-8">
                                <h1>{{ 'pet.index.title'|trans }}</h1>
                            </div>
                        </div>
                    </div>
                    <div class="panel-body">
                        <div class="text-right">
                            <a href="{{ path('public_pet_new', {hash: community.hash}) }}">
                                <h4>Acceder&nbsp;{{ icon('arrow-circle-right') }}</h4>
                            </a>
                        </div>
                    </div>
                </div>
            </div>

            <div class="col-md-6">
                <div class="panel panel-info">
                    <div class="panel-heading">
                        <div class="row">
                            <div class="col-md-4">
                                <h1 class="text-center">
                                    {{ icon('shield fa-fw fa-2x') }}
                                </h1>
                            </div>
                            <div class="col-md-8">
                                <h1>{{ 'unitinsurancepolicy.index.title'|trans }}</h1>
                            </div>
                        </div>
                    </div>
                    <div class="panel-body">
                        <div class="text-right">
                            <a href="{{ path('public_unitinsurancepolicy_new', {hash: community.hash}) }}">
                                <h4>Acceder&nbsp;{{ icon('arrow-circle-right') }}</h4>
                            </a>
                        </div>
                    </div>
                </div>
            </div>

        </div>
    </div>
{% endblock %}

{% block stylesheet %}
    <link href="{{ asset('vendor/animate.css/animate.css') }}" rel="stylesheet">
{% endblock %}

{% block javascript %}
    <script src="{{ asset('vendor/bootstrap-notify/bootstrap-notify.min.js') }}"></script>
    {% for type, messages in app.session.flashBag.all %}
        {% for message in messages %}
            <script type="text/javascript">
                var notifyData = {
                    message: '{{ message|trans }}',
                    type: '{{ type }}'
                };
                $.notify(notifyData);
            </script>
        {% endfor %}
    {% endfor %}

{% endblock %}