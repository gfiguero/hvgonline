{% extends 'HVGServiceControlBundle:ServiceLog:layout.html.twig' %}

{% trans_default_domain 'HVGServiceControlBundle' %}

{% block title %}{{ 'servicelog.new.title'|trans }}{% endblock %}

{% block servicelog %}
    <div class="panel panel-success">
        <div class="panel-heading">
            <h3 class="panel-title">{{ 'servicelog.new.title'|trans }}</h3>
        </div>
        <div class="panel-body">
            {{ form_start(newForm) }}
            {{ form_row(newForm.description) }}
            <div class="form-group">
                <button type="submit" class="btn btn-success btn-block btn-lg">{{ icon('check fa-fw') }}&nbsp;{{ 'servicelog.new.submit'|trans }}</button>
            </div>
            {{ form_end(newForm) }}
        </div>
    </div>
{% endblock %}
