{% extends 'HVGSystemBundle:System:base.html.twig' %}

{% use 'HVGSystemBundle:System:navbar.html.twig' %}

{% use 'HVGSystemBundle:System:sidebar.html.twig' %}

{% set translation_domain = 'HVGSystemBundle' %} 
{% trans_default_domain translation_domain %}

{% block title %}{{ 'requirementType.index.title'|trans }}{% endblock %}

{% block body %}
    <div id="page-wrapper">
        <div class="row" id="page-header">
            <div class="col-lg-12">
                <h1 class="page-header">{% include 'HVGSystemBundle:System:icon.html.twig' %}{{ 'requirementType.index.title'|trans }}</h1>
                {% include 'HVGSystemBundle:System:flashbag.html.twig' with { 'translation_domain': translation_domain } %}
            </div>
        </div>
        <!-- /#page-header -->
        <div class="row" id="page-list">
            <div class="col-lg-12">
                <div class="panel panel-default">
                    <div class="panel-heading">
                        <button type="button" class="btn btn-primary" data-toggle="modal" data-target="#modalNew">{{ icon('plus fa-fw') }}{{ 'requirementType.new.link'|trans }}</button>
                    </div>
                    <div class="table-responsive">
                        <table class="records_list table table-striped table-hover">
                            <thead>
                                <tr>
                                    <th>{{ knp_pagination_sortable(requirementTypes, 'requirementType.form.name'|trans, 'name') }}{% if sort == 'name' %}{% if direction == 'desc' %}{{ icon('caret-down') }}{% else %}{{ icon('caret-up') }}{% endif %}{% endif %}</th>
                                    <th>{{ 'requirementType.form.actions'|trans }}</th>
                                </tr>
                            </thead>
                            <tbody>
                            {% for key, requirementType in requirementTypes %}
                                <tr>
                                    <td>{% if requirementType.name %}{{ requirementType.name }}{% endif %}</td>
                                    <td>
                                        <button type="button" class="btn btn-primary" data-toggle="modal" data-target="#modalEdit{{ requirementType.id }}">{{ icon('edit fa-fw') }}{{ 'requirementType.edit.link'|trans }}</button>
                                        <button type="button" class="btn btn-danger" data-toggle="modal" data-target="#modalDelete{{ requirementType.id }}">{{ icon('times fa-fw') }}{{ 'requirementType.delete.link'|trans }}</button>
                                    </td>
                                </tr>
                            {% endfor %}
                            </tbody>
                        </table>
                    </div>
                    <div class="panel-footer">
                        <div class="text-center">
                            {{ knp_pagination_render(requirementTypes) }}
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <!-- /#page-list -->
        <div id="page-modal">
            <div class="modal fade" id="modalNew" tabindex="-1" role="dialog" aria-labelledby="myModalLabel">
                <div class="modal-dialog modal-sm" role="document">
                    <div class="modal-content">
                        <div class="modal-header">
                            <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                            <h4 class="modal-title" id="myModalLabel">{{ 'requirementType.new.title'|trans }}</h4>
                        </div>
                        <div class="modal-body">
                            <div class="row">
                                <div class="col-xs-12">
                                    {{ form_start(newForm) }}
                                        {{ form_widget(newForm) }}
                                        <button type="submit" class="btn btn-primary btn-block">{{ icon('check fa-fw') }}{{ 'requirementType.new.confirm'|trans }}</button>
                                    {{ form_end(newForm) }}
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            {% for key, requirementType in requirementTypes %}
            <div class="modal fade" id="modalEdit{{ requirementType.id }}" tabindex="-1" role="dialog" aria-labelledby="myModalLabel">
                <div class="modal-dialog modal-sm" role="document">
                    <div class="modal-content">
                        <div class="modal-header">
                            <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                            <h4 class="modal-title" id="myModalLabel">{{ 'requirementType.edit.title'|trans }}</h4>
                        </div>
                        <div class="modal-body">
                            <div class="row">
                                <div class="col-xs-12">
                                    {% set editForm = attribute(editForms, key) %}
                                    {{ form_start(editForm) }}
                                        {{ form_widget(editForm) }}
                                        <button type="submit" class="btn btn-primary btn-block">{{ icon('check fa-fw') }}{{ 'requirementType.edit.confirm'|trans }}</button>
                                    {{ form_end(editForm) }}
                                </div>
                            </div>
                            <div class="clearfix"></div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="modal fade" id="modalDelete{{ requirementType.id }}" tabindex="-1" role="dialog" aria-labelledby="myModalLabel">
                <div class="modal-dialog modal-sm" role="document">
                    <div class="modal-content">
                        <div class="modal-header">
                            <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                            <h4 class="modal-title" id="myModalLabel">{{ 'requirementType.delete.title'|trans }}</h4>
                        </div>
                        <div class="modal-body">
                            <div class="col-xs-2 text-center">{{ icon('exclamation-triangle fa-5x') }}</div>
                            <div class="col-xs-10"><p>{{ 'requirementType.delete.message'|trans }}</p></div>
                            <div class="clearfix"></div>
                        </div>
                        <div class="modal-footer">
                            {% set deleteForm = attribute(deleteForms, key) %}
                            {{ form_start(deleteForm) }}
                                {{ form_widget(deleteForm) }}
                                <button type="submit" class="btn btn-danger pull-right">{{ icon('times fa-fw') }}{{ 'requirementType.delete.confirm'|trans }}</button>
                            {{ form_end(deleteForm) }}
                            <div class="clearfix"></div>
                        </div>
                    </div>
                </div>
            </div>
            {% endfor %}
        </div>
        <!-- /#page-modal -->
    </div>
    <!-- /#page-wrapper -->

{% endblock %}
