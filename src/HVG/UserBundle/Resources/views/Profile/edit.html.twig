{% extends 'HVGSystemBundle::base.html.twig' %}
{% use 'HVGSystemBundle::navbar.html.twig' %}
{% use 'HVGSystemBundle::sidebar.html.twig' %}
{% use 'HVGSystemBundle::icons.html.twig' %}

{% set translation_domain = 'HVGUserBundle' %}
{% trans_default_domain translation_domain %}

{% block title %}{{ 'user.title.index'|trans }}{% endblock %}

{% block body %}

<div id="page-wrapper">
    <div class="row">
        <div class="col-lg-12">
            <h1 class="page-header">{{ 'user.title.index'|trans }}</h1>
            <div class="panel panel-default">
                <div class="panel-heading text-center">
                    <div class="panel-title">
                        {{ 'user.title.form'|trans }}
                    </div>
                </div>
                <div class="panel-body">
                    {{ form_start(form, { 'style': 'horizontal', 'action': path('fos_user_profile_edit'), 'attr': { 'class': 'fos_user_profile_edit' } }) }}
                        {{ form_widget(form) }}
                        <div class="form-group"><div class="col-lg-offset-3 col-lg-9">
                            <button type="submit" class="btn btn-primary">{{ icon('save') }}&nbsp;{{ 'user.form.submit'|trans }}</button>
                        </div></div>
                    {{ form_end(form) }}
                </div>
            </div>
        </div>
    </div>
</div>

{% endblock body %}